<root>
    <db>
        <type>pdo_mysql</type>
        <pdo_mysql host="localhost" port="3306" name="saltos" user="saltos" pass="saltos"/><!-- for MySQL -->
        <file eval="true">getcwd()."/data/files/saltos.sqlite"</file><!-- for SQLite -->
        <semaphoretimeout>10000000</semaphoretimeout><!-- in microseconds, for SQLite -->
    </db>
    <auth>
        <tokenshortexpires eval="true">86400*1</tokenshortexpires><!-- in seconds, one day -->
        <tokenlongexpires eval="true">86400*30</tokenlongexpires><!-- in seconds, around one month -->
        <passwordexpires eval="true">86400*365</passwordexpires><!-- in seconds, around one year -->
        <passwordminscore>50</passwordminscore><!-- min password strength score -->
    </auth>
    <server>
        <maxmemorylimit>1G</maxmemorylimit><!-- to be used in some actions that requires more memory -->
        <maxexecutiontime>3600</maxexecutiontime><!-- to be used in some actions that requires more time -->
        <cachetimeout>86400</cachetimeout><!-- in seconds, 86400 is 1 day -->
    </server>
    <dirs>
        <logsdir eval="true">getcwd()."/data/logs"</logsdir>
        <filesdir eval="true">getcwd()."/data/files"</filesdir>
        <cachedir eval="true">getcwd()."/data/cache"</cachedir>
        <tempdir eval="true">getcwd()."/data/temp"</tempdir>
        <uploaddir eval="true">getcwd()."/data/upload"</uploaddir>
        <inboxdir eval="true">getcwd()."/data/inbox"</inboxdir>
        <outboxdir eval="true">getcwd()."/data/outbox"</outboxdir>
    </dirs>
    <commands>
        <which>which</which><!-- for check commands -->
        <__which__>which __INPUT__</__which__>
        <timeout>timeout</timeout><!-- for ocr module -->
        <__timeout__>timeout __TIMEOUT__ __COMMAND__</__timeout__>
        <xlsx2csv>xlsxio_xlsx2csv</xlsx2csv><!-- for import optimization -->
        <__xlsx2csv__>cd __DIR__; xlsxio_xlsx2csv __INPUT__</__xlsx2csv__>
        <svnversion>svnversion</svnversion>
        <__svnversion__>cd __DIR__; svnversion</__svnversion__>
        <gitversion>git</gitversion>
        <__gitversion__>cd __DIR__; git rev-list HEAD --count</__gitversion__>
        <commandtimeout>60</commandtimeout><!-- in seconds, 60 is 1 minute -->
        <commandexpires>3600</commandexpires><!-- in seconds, 3600 is 1 hour -->
    </commands>
    <debug>
        <logfile>saltos.log</logfile>
        <errorfile>error.log</errorfile>
        <warningfile>warning.log</warningfile>
        <deprecatedfile>deprecated.log</deprecatedfile>
        <phperrorfile>phperror.log</phperrorfile>
        <xmlerrorfile>xmlerror.log</xmlerrorfile>
        <dberrorfile>dberror.log</dberrorfile>
        <jserrorfile>jserror.log</jserrorfile>
        <phpwarningfile>phpwarning.log</phpwarningfile>
        <xmlwarningfile>xmlwarning.log</xmlwarningfile>
        <dbwarningfile>dbwarning.log</dbwarningfile>
        <jswarningfile>jswarning.log</jswarningfile>
        <maxfilesize>100M</maxfilesize>
        <slowquerydebug>true</slowquerydebug>
        <slowquerytime>5</slowquerytime><!-- in seconds -->
        <patternquerydebug>false</patternquerydebug>
        <patternquerywords>from app_emails header</patternquerywords>
        <patternqueryoutput>data/temp/query.sql</patternqueryoutput>
    </debug>
    <iniset>
        <memory_limit>128M</memory_limit>
        <max_execution_time>600</max_execution_time><!-- in seconds, 600 are 10 minutes -->
        <date.timezone>Europe/Madrid</date.timezone>
        <default_charset>UTF-8</default_charset>
        <gd.jpeg_ignore_warning>1</gd.jpeg_ignore_warning>
    </iniset>
    <putenv>
        <OLD_LANG eval="true">getenv("LANG")</OLD_LANG><!-- don't touch this, is used as lang in cli sapi mode -->
        <PATH>/bin:/usr/bin:/usr/local/bin</PATH>
        <LANG>es_ES.UTF-8</LANG>
        <HOME>/tmp/</HOME>
    </putenv>
    <extras>
        <mb_internal_encoding>UTF-8</mb_internal_encoding>
        <mb_detect_order ifeval="!isphp(8.1)">UTF-7,ISO-8859-1,ISO-8859-2,ISO-8859-3,ISO-8859-4,ISO-8859-5,ISO-8859-6,ISO-8859-7,ISO-8859-8,ISO-8859-9,ISO-8859-10,ISO-8859-11,ISO-8859-12,ISO-8859-13,ISO-8859-14,ISO-8859-15,ISO-8859-16,Windows-1250,Windows-1251,Windows-1252,Windows-1253,Windows-1254,Windows-1255,Windows-1256,Windows-1257,Windows-1258,CP1256,CP1250,CP1252,CP437,CP737,CP850,CP852,CP855,CP857,CP858,CP860,CP861,CP862,CP863,CP865,CP866,CP869,CP37,CP930,CP1047</mb_detect_order>
        <mb_detect_order ifeval="isphp(8.1)">UTF-7,ISO-8859-1,ISO-8859-2,ISO-8859-3,ISO-8859-4,ISO-8859-5,ISO-8859-6,ISO-8859-7,ISO-8859-8,ISO-8859-9,ISO-8859-10,ISO-8859-13,ISO-8859-14,ISO-8859-15,ISO-8859-16</mb_detect_order>
    </extras>
    <unoconv>
        <soffice>soffice</soffice><!-- for unoconv module -->
        <__soffice__>soffice --headless --convert-to __FORMAT__ --outdir __OUTDIR__ __INPUT__ 2>&amp;1</__soffice__>
        <__soffice_formats__>bib,doc,xml,docx,fodt,html,ltx,txt,odt,ott,pdb,pdf,psw,rtf,sdw,stw,sxw,uot,vor,wps,bmp,emf,eps,fodg,gif,jpg,met,odd,otg,pbm,pct,pgm,png,ppm,ras,std,svg,svm,swf,sxd,tiff,wmf,xhtml,xpm,fodp,odg,odp,otp,potm,pot,pptx,pps,ppt,pwp,sda,sdd,sti,sxi,uop,csv,dbf,dif,fods,ods,xlsx,ots,pxl,sdc,slk,stc,sxc,uos,xls,xlt</__soffice_formats__>
        <pdftotext>pdftotext</pdftotext><!-- for unoconv module -->
        <__pdftotext__>pdftotext -nopgbrk -layout __INPUT__ __OUTPUT__ 2>&amp;1</__pdftotext__>
        <pdftoppm>pdftoppm</pdftoppm><!-- for ocr module included in unoconv -->
        <__pdftoppm__>pdftoppm -r 300 -l 1000 __INPUT__ __OUTPUT__ 2>&amp;1</__pdftoppm__>
        <convert>convert</convert><!-- for ocr module included in unoconv -->
        <__convert__>convert __INPUT__ -quality 100 __OUTPUT__ 2>&amp;1</__convert__>
        <tesseract>tesseract</tesseract><!-- for ocr module included in unoconv -->
        <__tesseract__>tesseract __INPUT__ __OUTPUT__ --psm 1 hocr 2>&amp;1</__tesseract__>
    </unoconv>
</root>
