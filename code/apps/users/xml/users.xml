<root>
    <screen>type2</screen>

    <!-- List part -->
    <list default="true">
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"))</check>
        <gettext eval="true">T([])</gettext>
        <title>Users list</title>
        <screen eval="true">xmlfile2array("apps/users/xml/users.xml")["screen"]</screen>
        <navbar eval="true">xmlfile2array("apps/dashboard/xml/navbar.xml")["navbar"]</navbar>
        <layout append="one">
            <row auto="true" row_class="row g-1" col_class="col-auto">
                <button ifeval="check_user('users', 'create')" onclick="saltos.driver.open('app/users/create')" label="New user" tooltip="To create a new user" icon="plus-lg"/>
                <div col_class="col"/>
                <hidden id="page" value="0"/>
                <text placeholder="Search" tooltip="To search in all contents" id="search" accesskey="ctrl+f" onenter="saltos.driver.search()" autofocus="true"/>
                <button onclick="saltos.driver.search()" label="Search" tooltip="To search in all contents" icon="search"/>
                <button onclick="saltos.driver.reset()" label="Reset" tooltip="To reset the search filter" icon="x-lg"/>
            </row>
            <row auto="true" col_class="col-12 my-3">
                <table id="table" source="app/users/list/table"/>
            </row>
            <row auto="true" row_class="row g-1" col_class="col-auto">
                <div col_class="col"/>
                <button id="more" onclick="saltos.driver.more()" label="More users" tooltip="To see more users in the list" icon="plus-lg"/>
            </row>
        </layout>
        <javascript>
            <inline>saltos.driver.init("list")</inline>
        </javascript>
    </list>

    <list id="table" dropdown="false" type="table" limit="25" order="id DESC">
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"))</check>
        <header>
            <login label="Username"/>
            <name label="Name"/>
            <description label="Description"/>
            <active label="Active" type="icon"/>
        </header>
        <data eval="true">execute_query_array("
            SELECT id, login, name, description,
            CASE active WHEN 1 THEN 'check-lg text-success' ELSE 'x-lg text-danger' END active
            FROM tbl_users
            WHERE 1 = 1
            AND ".make_fulltext_query(get_data("json/search"), "users", ["minsize" => 1, "default" => "1=1"])."
            AND ".check_sql("users", "list")."
            ORDER BY ".get_data("json/order")."
            LIMIT ".get_data("json/offset").",".get_data("json/limit"))</data>
        <actions>
            <action app="users" action="view" icon="search" tooltip="View" onclick="saltos.driver.open"/>
            <action app="users" action="edit" icon="pencil" tooltip="Edit" onclick="saltos.driver.open"/>
            <action app="users" action="delete" icon="trash" tooltip="Delete" onclick="saltos.driver.delete"/>
        </actions>
        <footer eval="true">"Total: " . execute_query("
            SELECT COUNT(*) total
            FROM tbl_users
            WHERE 1 = 1
            AND ".make_fulltext_query(get_data("json/search"), "users", ["minsize" => 1, "default" => "1=1"])."
            AND ".check_sql("users", "list"))</footer>
    </list>

    <!-- Form part -->
    <form>
        <text id="login" label="Username" required="true" autofocus="true"/>
        <select id="group_id" label="Group" required="true">
            <rows eval="true">execute_query_array("SELECT CONCAT(name,' (',code,')') label, id value FROM tbl_groups WHERE active=1 ORDER BY code ASC")</rows>
        </select>
        <switch id="active" label="Active"/>
        <div col_class="col-12"/><!-- this act as break line -->

        <text id="name" label="Name" required="true"/>
        <password id="newpass" label="New password"/>
        <password id="renewpass" label="Retype password"/>

        <textarea id="description" label="Description" required="true" height="10em" col_class="col-12 mb-3"/>

        <time id="start" label="Start" required="true"/>
        <time id="end" label="End" required="true"/>

        <multiselect id="days" label="Days" size="7" col_class="col-md-6 mb-3">
            <rows>
                <row label="Monday" value="64"></row>
                <row label="Tuesday" value="32"></row>
                <row label="Wednesday" value="16"></row>
                <row label="Thursday" value="8"></row>
                <row label="Friday" value="4"></row>
                <row label="Saturday" value="2"></row>
                <row label="Sunday" value="1"></row>
            </rows>
        </multiselect>
        <multiselect id="groups_id" label="Groups" size="7" col_class="col-md-6 mb-3">
            <rows eval="true">execute_query_array("SELECT CONCAT(name,' (',code,')') label, id value FROM tbl_groups WHERE active=1 ORDER BY code ASC")</rows>
        </multiselect>
        <table id="passwords" label="Passwords history" col_class="col-12 mb-3" ifeval="get_data('rest/2')=='view'">
            <header>
                <created_at label="Created at"/>
                <expires_at label="Expires at"/>
                <active label="Active" type="icon"/>
            </header>
            <data eval="true">execute_query_array("
                SELECT created_at, expires_at,
                CASE active WHEN 1 THEN 'check-lg text-success' ELSE 'x-lg text-danger' END active
                FROM tbl_users_passwords
                WHERE user_id = ".intval(get_data("rest/3"))."
                ORDER BY id DESC")</data>
        </table>
        <excel id="perms" label="Applications and permissions" col_class="col-12 mb-3" rowHeaderWidth="200" colWidths="100">
            <numcols eval="true">execute_query("SELECT COUNT(*) FROM tbl_perms WHERE active=1 ORDER BY id ASC")</numcols>
            <numrows eval="true">execute_query("SELECT COUNT(*) FROM tbl_apps WHERE active=1 ORDER BY id ASC")</numrows>
            <colHeaders eval="true">execute_query_array("SELECT CONCAT_WS('/',code,NULLIF(owner,'')) FROM tbl_perms WHERE active=1 ORDER BY id ASC")</colHeaders>
            <rowHeaders eval="true">execute_query_array("SELECT code FROM tbl_apps WHERE active=1 ORDER BY id ASC")</rowHeaders>
            <data require="apps/users/php/matrix.php" eval="true">make_matrix_data(
                execute_query_array("SELECT id FROM tbl_perms WHERE active=1 ORDER BY id ASC"),
                execute_query_array("SELECT id FROM tbl_apps WHERE active=1 ORDER BY id ASC"),
                execute_query_array("SELECT * FROM tbl_apps_perms"),
                execute_query_array("SELECT * FROM tbl_users_apps_perms WHERE user_id = ".intval(get_data("rest/3"))))</data>
            <cell require="apps/users/php/matrix.php" eval="true">make_matrix_cell(
                execute_query_array("SELECT id FROM tbl_perms WHERE active=1 ORDER BY id ASC"),
                execute_query_array("SELECT id FROM tbl_apps WHERE active=1 ORDER BY id ASC"),
                execute_query_array("SELECT * FROM tbl_apps_perms"),
                execute_query_array("SELECT * FROM tbl_users_apps_perms WHERE user_id = ".intval(get_data("rest/3"))))</cell>
        </excel>
    </form>
    <data require="apps/users/php/days.php" eval="true">fix4days(execute_query("SELECT * FROM tbl_users WHERE id=".intval(get_data("rest/3"))." AND ".check_sql(get_data("rest/1"), get_data("rest/2"))))</data>

    <create>
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"))</check>
        <gettext eval="true">T([])</gettext>
        <title>New user</title>
        <screen eval="true">xmlfile2array("apps/users/xml/users.xml")["screen"]</screen>
        <navbar eval="true">xmlfile2array("apps/dashboard/xml/navbar.xml")["navbar"]</navbar>
        <layout append="two,one">
            <row auto="true" col_class="col-md-4 mb-3" eval="true">xmlfile2array("apps/users/xml/users.xml")["form"]</row>
            <row auto="true" row_class="row g-1" col_class="col-auto">
                <div col_class="col"/>
                <button onclick="saltos.driver.insert()" label="Create" tooltip="To create the new user" icon="check-lg"/>
                <button onclick="saltos.driver.close()" label="Cancel" tooltip="To cancel the new user" icon="x-lg"/>
            </row>
        </layout>
        <javascript>
            <inline>saltos.driver.init("create")</inline>
        </javascript>
    </create>

    <create id="insert">
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"))</check>
        <check eval="true" message="Code used by other user">!execute_query("SELECT id FROM tbl_users WHERE login='".get_data("json/data/login")."'")</check>
        <check eval="true" message="Name used by other user">!execute_query("SELECT id FROM tbl_users WHERE name='".get_data("json/data/name")."'")</check>
        <days require="apps/users/php/days.php" eval="true">set_data("json/data/days",days2bin(get_data("json/data/days")))</days>
        <perms require="apps/users/php/matrix.php" eval="true">set_data("json/data/perms",unmake_matrix_data(
            execute_query_array("SELECT id FROM tbl_perms WHERE active=1 ORDER BY id ASC"),
            execute_query_array("SELECT id FROM tbl_apps WHERE active=1 ORDER BY id ASC"),
            execute_query_array("SELECT * FROM tbl_apps_perms"),
            get_data("json/data/perms")))</perms>
        <output require="apps/users/php/users.php" eval="true">insert_user(get_data("json/data"))</output>
    </create>

    <view>
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"), get_data("rest/3"))</check>
        <gettext eval="true">T([])</gettext>
        <title>Detail of the user</title>
        <screen eval="true">xmlfile2array("apps/users/xml/users.xml")["screen"]</screen>
        <navbar eval="true">xmlfile2array("apps/dashboard/xml/navbar.xml")["navbar"]</navbar>
        <layout append="two,one">
            <row auto="true" col_class="col-md-4 mb-3" eval="true">xmlfile2array("apps/users/xml/users.xml")["form"]</row>
            <row auto="true" row_class="row g-1" col_class="col-auto">
                <div col_class="col"/>
                <button label="Edit" tooltip="To modify this user" icon="pencil">
                    <onclick eval="true">"saltos.driver.open('app/users/edit/".intval(get_data("rest/3"))."')"</onclick>
                </button>
                <button onclick="saltos.driver.delete()" color="danger" label="Delete" tooltip="To delete this user" icon="trash"/>
                <button onclick="saltos.driver.close()" label="Close" tooltip="To close this window" icon="x-lg"/>
            </row>
        </layout>
        <data eval="true">xmlfile2array("apps/users/xml/users.xml")["data"]</data>
        <javascript>
            <inline>saltos.driver.init("view")</inline>
        </javascript>
    </view>

    <edit>
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"), get_data("rest/3"))</check>
        <gettext eval="true">T([])</gettext>
        <title>Modify this user</title>
        <screen eval="true">xmlfile2array("apps/users/xml/users.xml")["screen"]</screen>
        <navbar eval="true">xmlfile2array("apps/dashboard/xml/navbar.xml")["navbar"]</navbar>
        <layout append="two,one">
            <row auto="true" col_class="col-md-4 mb-3" eval="true">xmlfile2array("apps/users/xml/users.xml")["form"]</row>
            <row auto="true" row_class="row g-1" col_class="col-auto">
                <div col_class="col"/>
                <button onclick="saltos.driver.update()" label="Save" tooltip="To save the user changes" icon="check-lg"/>
                <button onclick="saltos.driver.close()" label="Cancel" tooltip="To cancel the user modification" icon="x-lg"/>
            </row>
        </layout>
        <data eval="true">xmlfile2array("apps/users/xml/users.xml")["data"]</data>
        <javascript>
            <inline>saltos.driver.init("edit")</inline>
        </javascript>
    </edit>

    <edit id="update">
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"), get_data("rest/4"))</check>
        <check eval="true" message="Login used by other user">!execute_query("SELECT id FROM tbl_users WHERE login='".get_data("json/data/login")."'")</check>
        <check eval="true" message="Name used by other user">!execute_query("SELECT id FROM tbl_users WHERE name='".get_data("json/data/name")."'")</check>
        <days require="apps/users/php/days.php" eval="true">set_data("json/data/days",days2bin(get_data("json/data/days")))</days>
        <perms require="apps/users/php/matrix.php" eval="true">set_data("json/data/perms",unmake_matrix_data(
            execute_query_array("SELECT id FROM tbl_perms WHERE active=1 ORDER BY id ASC"),
            execute_query_array("SELECT id FROM tbl_apps WHERE active=1 ORDER BY id ASC"),
            execute_query_array("SELECT * FROM tbl_apps_perms"),
            get_data("json/data/perms")))</perms>
        <output require="apps/users/php/users.php" eval="true">update_user(intval(get_data("rest/4")), get_data("json/data"))</output>
    </edit>

    <delete>
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"), get_data("rest/3"))</check>
        <output require="apps/users/php/users.php" eval="true">delete_user(intval(get_data("rest/3")))</output>
    </delete>
</root>
