<root>
    <screen>type2</screen>

    <!-- List part -->
    <list default="true">
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"))</check>
        <gettext eval="true">T([])</gettext>
        <title>Groups list</title>
        <screen eval="true">xmlfile2array("apps/users/xml/groups.xml")["screen"]</screen>
        <navbar eval="true">xmlfile2array("apps/dashboard/xml/navbar.xml")["navbar"]</navbar>
        <layout append="one">
            <row auto="true" row_class="row g-1" col_class="col-auto">
                <button ifeval="check_user('groups', 'create')" onclick="saltos.driver.open('app/groups/create')" label="New group" tooltip="To create a new group" icon="plus-lg"/>
                <div col_class="col"/>
                <hidden id="page" value="0"/>
                <text placeholder="Search" tooltip="To search in all contents" id="search" accesskey="ctrl+f" onenter="saltos.driver.search()" autofocus="true"/>
                <button onclick="saltos.driver.search()" label="Search" tooltip="To search in all contents" icon="search"/>
                <button onclick="saltos.driver.reset()" label="Reset" tooltip="To reset the search filter" icon="x-lg"/>
            </row>
            <row auto="true" col_class="col-12 my-3">
                <table id="table" nodata="Loading..."/>
            </row>
            <row auto="true" row_class="row g-1" col_class="col-auto">
                <div col_class="col"/>
                <button id="more" onclick="saltos.driver.more()" label="More groups" tooltip="To see more groups in the list" icon="plus-lg"/>
            </row>
        </layout>
        <javascript>
            <inline>saltos.driver.init("list")</inline>
        </javascript>
    </list>

    <list id="table" dropdown="false" type="table" limit="25" order="id DESC" nodata="Data not found">
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"))</check>
        <header>
            <code label="Code"/>
            <name label="Name"/>
            <description label="Description"/>
            <active label="Active" type="icon"/>
        </header>
        <temp eval="true">[
            set_config("app/".get_data("rest/1")."/".get_data("rest/2")."/last", json_encode(get_data("json")), current_user()),
            set_data("json/search", strval(get_data("json/search"))),
            set_data("json/page", intval(get_data("json/page"))),
            set_data("json/order", "id DESC"),
            set_data("json/limit", 25),
            set_data("json/offset", intval(get_data("json/page") * get_data("json/limit"))),
        ]</temp>
        <data eval="true">merge_data_actions(
            execute_query_array("
                SELECT id, code, name, description,
                CASE active WHEN 1 THEN 'check-lg text-success' ELSE 'x-lg text-danger' END active
                FROM tbl_groups
                WHERE 1 = 1
                AND ".make_fulltext_query(get_data("json/search"), "groups", ["minsize" => 1, "default" => "1=1"])."
                AND ".check_sql("groups", "list")."
                ORDER BY ".get_data("json/order")."
                LIMIT ".get_data("json/offset").",".get_data("json/limit")),
            xpath_search_first("list[id=table]/actions", xmlfile2array("apps/users/xml/groups.xml"))
        )</data>
        <actions>
            <action app="groups" action="view" icon="search" tooltip="View" onclick="saltos.driver.open"/>
            <action app="groups" action="edit" icon="pencil" tooltip="Edit" onclick="saltos.driver.open"/>
            <action app="groups" action="delete" icon="trash" tooltip="Delete" onclick="saltos.driver.delete"/>
        </actions>
        <footer ifeval="!get_data('json/page')" eval="true">"Total: " . execute_query("
            SELECT COUNT(*) total
            FROM tbl_groups
            WHERE 1 = 1
            AND ".make_fulltext_query(get_data("json/search"), "groups", ["minsize" => 1, "default" => "1=1"])."
            AND ".check_sql("groups", "list"))</footer>
    </list>

    <list id="search">
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"))</check>
        <output eval="true">get_config_array("app/".get_data("rest/1")."/".get_data("rest/2")."/", current_user())</output>
    </list>

    <!-- Form part -->
    <form>
        <text id="code" label="Code" required="true" autofocus="true"/>
        <text id="name" label="Name" required="true"/>
        <switch id="active" label="Active"/>
        <textarea id="description" label="Description" required="true" height="10em" col_class="col-12 mb-3"/>
        <multiselect id="users_id" label="Users" size="7" col_class="col-md-8 mb-3">
            <rows eval="true">execute_query_array("SELECT CONCAT(name,' (',login,')') label, id value FROM tbl_users WHERE active=1 ORDER BY login ASC")</rows>
        </multiselect>
        <excel id="perms" label="Applications and permissions" col_class="col-12 mb-3" rowHeaderWidth="200" colWidths="100">
            <numcols eval="true">execute_query("SELECT COUNT(*) FROM tbl_perms WHERE active=1 ORDER BY id ASC")</numcols>
            <numrows eval="true">execute_query("SELECT COUNT(*) FROM tbl_apps WHERE active=1 ORDER BY id ASC")</numrows>
            <colHeaders eval="true">execute_query_array("SELECT CONCAT_WS('/',code,NULLIF(owner,'')) FROM tbl_perms WHERE active=1 ORDER BY id ASC")</colHeaders>
            <rowHeaders eval="true">execute_query_array("SELECT code FROM tbl_apps WHERE active=1 ORDER BY id ASC")</rowHeaders>
            <data require="apps/users/php/matrix.php" eval="true">make_matrix_data(
                execute_query_array("SELECT id FROM tbl_perms WHERE active=1 ORDER BY id ASC"),
                execute_query_array("SELECT id FROM tbl_apps WHERE active=1 ORDER BY id ASC"),
                execute_query_array("SELECT * FROM tbl_apps_perms"),
                execute_query_array("SELECT * FROM tbl_groups_apps_perms WHERE group_id = ".intval(get_data("rest/3"))))</data>
            <cell require="apps/users/php/matrix.php" eval="true">make_matrix_cell(
                execute_query_array("SELECT id FROM tbl_perms WHERE active=1 ORDER BY id ASC"),
                execute_query_array("SELECT id FROM tbl_apps WHERE active=1 ORDER BY id ASC"),
                execute_query_array("SELECT * FROM tbl_apps_perms"),
                execute_query_array("SELECT * FROM tbl_groups_apps_perms WHERE group_id = ".intval(get_data("rest/3"))))</cell>
        </excel>
    </form>
    <data eval="true">execute_query("SELECT * FROM tbl_groups WHERE id=".intval(get_data("rest/3"))." AND ".check_sql(get_data("rest/1"), get_data("rest/2")))</data>

    <create>
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"))</check>
        <gettext eval="true">T([])</gettext>
        <title>New group</title>
        <screen eval="true">xmlfile2array("apps/users/xml/groups.xml")["screen"]</screen>
        <navbar eval="true">xmlfile2array("apps/dashboard/xml/navbar.xml")["navbar"]</navbar>
        <layout append="two,one">
            <row auto="true" col_class="col-md-4 mb-3" eval="true">xmlfile2array("apps/users/xml/groups.xml")["form"]</row>
            <row auto="true" row_class="row g-1" col_class="col-auto">
                <div col_class="col"/>
                <button onclick="saltos.driver.insert()" label="Create" tooltip="To create the new group" icon="check-lg"/>
                <button onclick="saltos.driver.close()" label="Cancel" tooltip="To cancel the new group" icon="x-lg"/>
            </row>
        </layout>
        <javascript>
            <inline>saltos.driver.init("create")</inline>
        </javascript>
    </create>

    <create id="insert">
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"))</check>
        <check eval="true" message="Code used by other group">!execute_query("SELECT id FROM tbl_groups WHERE code='".get_data("json/data/code")."'")</check>
        <check eval="true" message="Name used by other group">!execute_query("SELECT id FROM tbl_groups WHERE name='".get_data("json/data/name")."'")</check>
        <perms require="apps/users/php/matrix.php" eval="true">set_data("json/data/perms",unmake_matrix_data(
            execute_query_array("SELECT id FROM tbl_perms WHERE active=1 ORDER BY id ASC"),
            execute_query_array("SELECT id FROM tbl_apps WHERE active=1 ORDER BY id ASC"),
            execute_query_array("SELECT * FROM tbl_apps_perms"),
            get_data("json/data/perms")))</perms>
        <output require="apps/users/php/groups.php" eval="true">insert_group(get_data("json"))</output>
    </create>

    <view>
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"), get_data("rest/3"))</check>
        <gettext eval="true">T([])</gettext>
        <title>Detail of the group</title>
        <screen eval="true">xmlfile2array("apps/users/xml/groups.xml")["screen"]</screen>
        <navbar eval="true">xmlfile2array("apps/dashboard/xml/navbar.xml")["navbar"]</navbar>
        <layout append="two,one">
            <row auto="true" col_class="col-md-4 mb-3" eval="true">xmlfile2array("apps/users/xml/groups.xml")["form"]</row>
            <row auto="true" row_class="row g-1" col_class="col-auto">
                <div col_class="col"/>
                <button label="Edit" tooltip="To modify this group" icon="pencil">
                    <onclick eval="true">"saltos.driver.open('app/groups/edit/".intval(get_data("rest/3"))."')"</onclick>
                </button>
                <button onclick="saltos.driver.delete()" color="danger" label="Delete" tooltip="To delete this group" icon="trash"/>
                <button onclick="saltos.driver.close()" label="Close" tooltip="To close this window" icon="x-lg"/>
            </row>
        </layout>
        <data eval="true">xmlfile2array("apps/users/xml/groups.xml")["data"]</data>
        <javascript>
            <inline>saltos.driver.init("view")</inline>
        </javascript>
    </view>

    <edit>
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"), get_data("rest/3"))</check>
        <gettext eval="true">T([])</gettext>
        <title>Modify this group</title>
        <screen eval="true">xmlfile2array("apps/users/xml/groups.xml")["screen"]</screen>
        <navbar eval="true">xmlfile2array("apps/dashboard/xml/navbar.xml")["navbar"]</navbar>
        <layout append="two,one">
            <row auto="true" col_class="col-md-4 mb-3" eval="true">xmlfile2array("apps/users/xml/groups.xml")["form"]</row>
            <row auto="true" row_class="row g-1" col_class="col-auto">
                <div col_class="col"/>
                <button onclick="saltos.driver.update()" label="Save" tooltip="To save the group changes" icon="check-lg"/>
                <button onclick="saltos.driver.close()" label="Cancel" tooltip="To cancel the group modification" icon="x-lg"/>
            </row>
        </layout>
        <data eval="true">xmlfile2array("apps/users/xml/groups.xml")["data"]</data>
        <javascript>
            <inline>saltos.driver.init("edit")</inline>
        </javascript>
    </edit>

    <edit id="update">
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"), get_data("rest/4"))</check>
        <check eval="true" message="Code used by other group">!execute_query("SELECT id FROM tbl_groups WHERE code='".get_data("json/data/code")."'")</check>
        <check eval="true" message="Name used by other group">!execute_query("SELECT id FROM tbl_groups WHERE name='".get_data("json/data/name")."'")</check>
        <perms require="apps/users/php/matrix.php" eval="true">set_data("json/data/perms",unmake_matrix_data(
            execute_query_array("SELECT id FROM tbl_perms WHERE active=1 ORDER BY id ASC"),
            execute_query_array("SELECT id FROM tbl_apps WHERE active=1 ORDER BY id ASC"),
            execute_query_array("SELECT * FROM tbl_apps_perms"),
            get_data("json/data/perms")))</perms>
        <output require="apps/users/php/groups.php" eval="true">update_group(intval(get_data("rest/4")), get_data("json"))</output>
    </edit>

    <delete>
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"), get_data("rest/3"))</check>
        <output require="apps/users/php/groups.php" eval="true">delete_group(intval(get_data("rest/3")))</output>
    </delete>
</root>
