<root>
    <menu>
        <javascript>
            <inline>saltos.loading()</inline>
            <inline>saltos.clear_screen()</inline>
            <file>core/lib/chartjs/chart.umd.min.js</file>
        </javascript>
        <layout auto="true" container_class="container mt-3" col_class="col-md-4 mb-3">
            <button ifeval="check_user('customers', 'menu')" onclick="saltos.open_window('#app/customers/list')" class="btn btn-primary fs-1 w-100 h-100" value="Customers"/>
            <button ifeval="check_user('invoices', 'menu')" onclick="saltos.open_window('#app/invoices/list')" class="btn btn-primary fs-1 w-100 h-100" value="Invoices"/>
            <button ifeval="check_user('emails', 'menu')" onclick="saltos.open_window('#app/emails/list')" class="btn btn-success fs-1 w-100 h-100" value="Email"/>
            <button ifeval="check_user('tester', 'menu')" onclick="saltos.open_window('#app/tester/menu/1')" class="btn btn-danger fs-1 w-100 h-100" value="Tester"/>
            <button ifeval="check_user('tester', 'menu')" onclick="saltos.open_window('#app/tester/menu/2')" class="btn btn-danger fs-1 w-100 h-100" value="Tester"/>
        </layout>
        <layout auto="true" container_class="container" col_class="col-md-4 mb-3">
            <table ifeval="check_user('customers', 'widget')" source="list/customers/widget/table1" col_class="col-md-6 mb-3"></table>
            <table ifeval="check_user('customers', 'widget')" source="list/customers/widget/table2" col_class="col-md-6 mb-3"></table>
            <chartjs ifeval="check_user('customers', 'widget')" source="app/customers/widget/plot2" mode="pie"></chartjs>
            <chartjs ifeval="check_user('customers', 'widget')" source="app/customers/widget/plot1" mode="bar"></chartjs>
            <chartjs ifeval="check_user('customers', 'widget')" source="app/customers/widget/plot1" mode="line"></chartjs>
        </layout>
        <javascript>
            <file eval="true">file_with_hash("apps/dashboard/app.js")</file>
            <inline>saltos.dashboard.initialize()</inline>
        </javascript>
        <document_title>Dashboard</document_title>
    </menu>
</root>
