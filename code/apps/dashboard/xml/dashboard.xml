<root>
    <menu default="true">
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"))</check>
        <gettext eval="true">T([])</gettext>
        <title>Dashboard</title>
        <screen>type1</screen>
        <navbar eval="true">xmlfile2array("apps/dashboard/xml/navbar.xml")["navbar"]</navbar>
        <layout append="one">
            <row auto="true" row_class="row items" col_class="col-xl-4 col-md-6 mb-3">
                <button ifeval="check_user('customers', 'menu')" onclick="saltos.window.open('app/customers')" class="fs-1 w-100 h-100" label="Customers"/>
                <button ifeval="check_user('invoices', 'menu')" onclick="saltos.window.open('app/invoices')" class="fs-1 w-100 h-100" label="Invoices"/>
                <button ifeval="check_user('emails', 'menu')" onclick="saltos.window.open('app/emails')" color="success" class="fs-1 w-100 h-100" label="Emails"/>
                <button ifeval="check_user('users', 'menu')" onclick="saltos.window.open('app/users')" color="warning" class="fs-1 w-100 h-100" label="Users"/>
                <button ifeval="check_user('groups', 'menu')" onclick="saltos.window.open('app/groups')" color="warning" class="fs-1 w-100 h-100" label="Groups"/>
                <button ifeval="check_user('tester', 'menu')" onclick="saltos.window.open('app/tester')" color="danger" class="fs-1 w-100 h-100" label="Tester"/>
                <button ifeval="check_user('types', 'menu')" onclick="saltos.window.open('app/types')" class="fs-1 w-100 h-100" label="Types"/>
                <div col_class="col-12"/><!-- this act as break line -->
                <table id="table1" ifeval="check_user('customers', 'widget')" source="app/customers/widget/table1" col_class="col-xl-6 col-md-12 mb-3" nodata="Data not found"/>
                <table ifeval="check_user('customers', 'widget')" source="app/customers/widget/table2" col_class="col-xl-6 col-md-12 mb-3" nodata="Data not found"/>
                <chartjs ifeval="check_user('customers', 'widget')" source="app/customers/widget/plot2" mode="pie"/>
                <chartjs ifeval="check_user('customers', 'widget')" source="app/customers/widget/plot1" mode="bar"/>
                <chartjs ifeval="check_user('customers', 'widget')" source="app/customers/widget/plot1" mode="line"/>
            </row>
        </layout>
        <javascript>
            <file eval="true">file_with_hash("apps/dashboard/lib/sortablejs/sortable.min.js")</file>
            <file eval="true">file_with_hash("apps/dashboard/js/dashboard.js")</file>
            <inline>saltos.driver.init("menu")</inline>
            <inline>saltos.dashboard.init("menu")</inline>
        </javascript>
    </menu>

    <config>
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"))</check>
        <gettext eval="true">T([])</gettext>
        <title append="offcanvas">Profile</title>
        <layout append="right">
            <row auto="true" col_class="col-md-12 mb-3">
                <select id="bs_theme" label="Color mode" onchange="saltos.bootstrap.set_bs_theme(this.value)">
                    <rows eval="true">xmlfile2array("xml/bs_theme.xml")["rows"]</rows>
                </select>
                <select id="css_theme" label="Theme style" onchange="saltos.bootstrap.set_css_theme(this.value)">
                    <rows eval="true">xmlfile2array("xml/css_theme.xml")["rows"]</rows>
                </select>
                <select id="lang" label="Language" onchange="saltos.gettext.set(this.value);saltos.hash.trigger()">
                    <rows eval="true">xmlfile2array("xml/locale.xml")["rows"]</rows>
                </select>
                <hr col_class="col-md-12 mb-1"/>
                <password id="oldpass" label="Old password" required="true" onenter="document.getElementById('newpass').focus()"/>
                <password id="newpass" label="New password" required="true" onenter="document.getElementById('renewpass').focus()"/>
                <password id="renewpass" label="Retype password" required="true" onenter="saltos.dashboard.authupdate()"/>
            </row>
            <row auto="true" row_class="row g-1" col_class="col-auto">
                <div col_class="col"/>
                <button onclick="saltos.dashboard.authupdate()" label="Update" tooltip="Update the password" icon="check-lg"/>
                <button onclick="saltos.bootstrap.offcanvas('close');" label="Close" tooltip="Close this screen" icon="x-lg"/>
            </row>
        </layout>
        <javascript>
            <file eval="true">file_with_hash("apps/dashboard/js/dashboard.js")</file>
            <inline>saltos.dashboard.init("config")</inline>
        </javascript>
    </config>

    <help>
        <check eval="true">check_app_perm_id(get_data("rest/3"), get_data("rest/2"))</check>
        <gettext eval="true">T([])</gettext>
        <title append="modal">Help</title>
        <layout append="three">
            <row auto="true" col_class="col-12 mb-3">
                <pdfjs id="pdfjs">
                    <src require="php/lib/help.php" eval="true">detect_help_file(get_data("rest/3"), current_lang())</src>
                </pdfjs>
            </row>
            <row auto="true" row_class="row g-1" col_class="col-auto">
                <div col_class="col"/>
                <button onclick="saltos.window.open(document.getElementById('pdfjs').src);saltos.bootstrap.modal('close');" label="Open" tooltip="To open this help in an external window" icon="box-arrow-up-right"/>
                <button onclick="saltos.bootstrap.modal('close');" label="Close" tooltip="To close this help" icon="x-lg"/>
            </row>
        </layout>
    </help>
</root>
