<root>
    <navbar id="navbar" append="top" brand.name="SaltOS" brand.logo="img/logo_white.svg" brand.width="25" brand.height="25">
        <items>
            <menu class="navbar-nav me-auto mb-2 mb-lg-0">
                <item name="Dashboard" onclick="saltos.window.open('#app/dashboard')"/>
                <item name="Applications">
                    <menu>
                        <item name="Emails" onclick="saltos.window.open('#app/emails')"/>
                        <item divider="true"/>
                        <item name="Customers" onclick="saltos.window.open('#app/customers')"/>
                        <item name="Invoices" onclick="saltos.window.open('#app/invoices')"/>
                        <item divider="true"/>
                        <item name="Types" onclick="saltos.window.open('#app/types')"/>
                        <item name="New tester" onclick="saltos.window.open('#app/tester/menu/new')"/>
                        <item name="Old tester" onclick="saltos.window.open('#app/tester/menu/old')"/>
                    </menu>
                </item>
            </menu>
            <form class="d-flex">
                <hidden id="page" value="0"/>
                <text placeholder="Search" tooltip="To search in all contents" id="search" accesskey="ctrl+f" onenter="saltos.driver.search()" autofocus="true" color="light"/>
                <button onclick="saltos.driver.search()" label="Search" tooltip="To search in all contents" icon="search" color="light" class="text-nowrap ms-1"/>
                <button onclick="saltos.driver.reset()" label="Reset" tooltip="To reset the search filter" icon="x-lg" color="light" class="text-nowrap ms-1"/>
            </form>
            <menu class="navbar-nav mb-2 mb-lg-0">
                <item name="Themes" dropdown_menu_end="true">
                    <menu>
                        <item name="bootstrap" disabled="false" onclick="alert('bootstrap')"/>
                        <item name="cerulean" disabled="false" onclick="alert('cerulean')"/>
                    </menu>
                </item>
                <item icon="sun-fill" dropdown_menu_end="true">
                    <menu>
                        <item name="Light" icon="sun-fill" onclick="alert('light')"/>
                        <item name="Dark" icon="moon-stars-fill" onclick="alert('dark')"/>
                        <item name="Auto" icon="circle-half" onclick="alert('auto')"/>
                    </menu>
                </item>
            </menu>
        </items>
    </navbar>
</root>
