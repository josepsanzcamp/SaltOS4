<root>
    <navbar id="navbar" append="header" brand.image="img/logo_saltos.png" brand.alt="SaltOS" brand.width="155" brand.height="29">
        <items>
            <menu class="navbar-nav me-auto mb-2 mb-lg-0">
                <item label="Dashboard" onclick="saltos.window.open('app/dashboard')"/>
                <item label="Applications">
                    <menu>
                        <item label="Emails" onclick="saltos.window.open('app/emails')"/>
                        <item divider="true"/>
                        <item label="Customers" onclick="saltos.window.open('app/customers')"/>
                        <item label="Invoices" onclick="saltos.window.open('app/invoices')"/>
                        <item divider="true"/>
                        <item label="Users" onclick="saltos.window.open('app/users')"/>
                        <item label="Groups" onclick="saltos.window.open('app/groups')"/>
                        <item divider="true"/>
                        <item label="Types" onclick="saltos.window.open('app/types')"/>
                        <item label="Tester" onclick="saltos.window.open('app/tester')"/>
                    </menu>
                </item>
            </menu>
            <menu class="navbar-nav ms-auto mb-2 mb-lg-0">
                <item id="username" dropdown_menu_end="true" icon="person">
                    <label eval="true">execute_query("SELECT name FROM tbl_users WHERE id = ?", [current_user()])</label>
                    <menu>
                        <item label="Profile" onclick="saltos.app.profile()"/>
                        <item label="Help" onclick="saltos.app.help()"/>
                        <item label="Logout" onclick="saltos.authenticate.deauthtoken();saltos.hash.trigger()"/>
                    </menu>
                </item>
            </menu>
        </items>
    </navbar>
</root>
