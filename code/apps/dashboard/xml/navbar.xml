<root>
    <navbar id="navbar" append="header" brand.logo="img/logo_saltos.svg" brand.alt="SaltOS" brand.width="214" brand.height="40" brand.class="py-0">
        <items>
            <menu class="navbar-nav me-auto mb-2 mb-lg-0">
                <item name="Dashboard" onclick="saltos.window.open('app/dashboard')"/>
                <item name="Applications">
                    <menu>
                        <item name="Emails" onclick="saltos.window.open('app/emails')"/>
                        <item divider="true"/>
                        <item name="Customers" onclick="saltos.window.open('app/customers')"/>
                        <item name="Invoices" onclick="saltos.window.open('app/invoices')"/>
                        <item divider="true"/>
                        <item name="Types" onclick="saltos.window.open('app/types')"/>
                        <item name="New tester" onclick="saltos.window.open('app/tester/menu/new')"/>
                        <item name="Old tester" onclick="saltos.window.open('app/tester/menu/old')"/>
                    </menu>
                </item>
            </menu>
            <menu class="navbar-nav ms-auto mb-2 mb-lg-0">
                <item id="username" dropdown_menu_end="true">
                    <name eval="true">execute_query("SELECT name FROM tbl_users WHERE id=".current_user())</name>
                    <menu>
                        <item name="Profile" onclick="saltos.app.profile()"/>
                        <item name="Logout" onclick="saltos.authenticate.deauthtoken();saltos.hash.trigger();"/>
                    </menu>
                </item>
            </menu>
        </items>
    </navbar>
</root>
