<root>
    <menu>
        <javascript>
            <inline>saltos.loading(0)</inline>
            <inline>saltos.clear_screen()</inline>
            <file>core/lib/locutus/locutus.min.js</file>
            <file>core/lib/chartjs/chart.umd.min.js</file>
        </javascript>
        <layout auto="true" container_class="container mt-3" col_class="col-md-4 mb-3">
            <button ifeval="check_user('correo', 'menu')" onclick="saltos.open_window('#app/correo/list')" class="btn btn-primary fs-1 w-100 h-100" eval="true">T("Email")</button>
            <button ifeval="check_user('clientes', 'menu')" onclick="saltos.open_window('#app/clientes/list')" class="btn btn-primary fs-1 w-100 h-100" eval="true">T("Customers")</button>
            <button ifeval="check_user('proveedores', 'menu')" onclick="saltos.open_window('#app/proveedores/list')" class="btn btn-primary fs-1 w-100 h-100" eval="true">T("Providers")</button>
            <button ifeval="check_user('facturas', 'menu')" onclick="saltos.open_window('#app/facturas/list')" class="btn btn-primary fs-1 w-100 h-100" eval="true">T("Invoices")</button>
            <button ifeval="check_user('login', 'menu')" onclick="saltos.open_window('#app/login')" class="btn btn-success fs-1 w-100 h-100" eval="true">T("Login")</button>
            <button ifeval="check_user('tester', 'menu')" onclick="saltos.open_window('#app/tester')" class="btn btn-danger fs-1 w-100 h-100" eval="true">T("Tester")</button>
            <table ifeval="check_user('clientes', 'widget')" source="app/clientes/widget/1" col_class="col-md-6 mb-3"></table>
            <table ifeval="check_user('clientes', 'widget')" source="app/clientes/widget/2" col_class="col-md-6 mb-3"></table>
            <chartjs ifeval="check_user('clientes', 'widget')" source="app/clientes/widget/5" mode="pie"></chartjs>
            <chartjs ifeval="check_user('clientes', 'widget')" source="app/clientes/widget/3" mode="bar"></chartjs>
            <chartjs ifeval="check_user('clientes', 'widget')" source="app/clientes/widget/3" mode="line"></chartjs>
        </layout>
    </menu>
</root>
