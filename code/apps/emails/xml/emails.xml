    <view id="body">
        <check eval="true" logout="true">current_user()</check>
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"), get_data("rest/4"))</check>
        <srcdoc require="apps/emails/php/getmail.php" eval="true">getmail_body(intval(get_data("rest/4")))</srcdoc>
    </view>

    <view id="files" dropdown="false" type="table">
        <check eval="true" logout="true">current_user()</check>
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"), get_data("rest/4"))</check>
        <header>
            <name>Filename</name>
            <size>Size</size>
        </header>
        <data require="apps/emails/php/getmail.php" eval="true">merge_data_actions(
            getmail_files(intval(get_data("rest/4"))),
            xpath_search_first_value("view[id=files]/actions", xmlfile2array("apps/emails/xml/emails.xml"))
        )</data>
        <actions>
            <action app="emails" action="view/viewpdf" icon="search" tooltip="View attachment" onclick="saltos.driver.open"/>
            <action app="emails" action="view/download" icon="save" tooltip="Download attachment" onclick="saltos.app.download"/>
        </actions>
    </view>

    <view id="setter">
        <check eval="true" logout="true">current_user()</check>
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"), get_data("rest/4"))</check>
        <text require="apps/emails/php/getmail.php" eval="true">getmail_setter(get_data("rest/4"), get_data("json/what"))</text>
    </view>

    <view id="source">
        <check eval="true" logout="true">current_user()</check>
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"), get_data("rest/4"))</check>
        <gettext eval="true">T()</gettext>
        <title>Source of the email</title>
        <javascript>
            <file eval="true">file_with_hash(file_with_min("apps/emails/js/driver.js"))</file>
        </javascript>
        <screen eval="true">xmlfile2array("apps/emails/xml/emails.xml")["screen"]</screen>
        <navbar eval="true">xmlfile2array("apps/common/xml/navbar.xml")["navbar"]</navbar>
        <layout append="three,two,one">
            <row auto="true" col_class="col-12 mb-3">
                <iframe>
                    <srcdoc require="apps/emails/php/getmail.php" eval="true">getmail_source(intval(get_data("rest/4")))</srcdoc>
                </iframe>
            </row>
            <row auto="true" row_class="row g-1" col_class="col-auto">
                <div col_class="col"/>
                <button onclick="saltos.driver.close()" label="Close" tooltip="To close this list" icon="x-lg" autoclose="true"/>
            </row>
        </layout>
        <javascript>
            <inline>saltos.driver.init("view")</inline>
        </javascript>
    </view>

    <view id="viewpdf">
        <check eval="true" logout="true">current_user()</check>
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"), get_data("rest/4"))</check>
        <gettext eval="true">T()</gettext>
        <title ifeval="get_data('rest/5')" require="apps/emails/php/getmail.php" eval="true">getmail_cid(intval(get_data("rest/4")),get_data("rest/5"))["name"]</title>
        <title ifeval="!get_data('rest/5')" require="php/lib/pdf.php" eval="true">pdf("apps/emails/xml/pdf.xml", [
            "id" => check_ids(get_data("rest/4")),
        ])["name"]</title>
        <javascript>
            <file eval="true">file_with_hash(file_with_min("apps/emails/js/driver.js"))</file>
        </javascript>
        <screen eval="true">xmlfile2array("apps/emails/xml/emails.xml")["screen"]</screen>
        <navbar eval="true">xmlfile2array("apps/common/xml/navbar.xml")["navbar"]</navbar>
        <layout append="three,two,one">
            <row auto="true" col_class="col-12 mb-3">
                <pdfjs height="calc(100vh - 200px)">
                    <srcdoc ifeval="get_data('rest/5')" require="apps/emails/php/getmail.php" eval="true">getmail_viewpdf(intval(get_data("rest/4")),get_data("rest/5"))</srcdoc>
                    <srcdoc ifeval="!get_data('rest/5')" require="php/lib/pdf.php" eval="true">pdf("apps/emails/xml/pdf.xml", [
                        "id" => check_ids(get_data("rest/4")),
                    ])["data"]</srcdoc>
                </pdfjs>
            </row>
            <row auto="true" row_class="row g-1" col_class="col-auto">
                <div col_class="col"/>
                <button label="Download" tooltip="To download the email" icon="save">
                    <onclick ifeval="get_data('rest/5')" eval="true">"saltos.app.download('app/emails/view/download/".intval(get_data("rest/4"))."/".get_data("rest/5")."')"</onclick>
                    <onclick ifeval="!get_data('rest/5')" eval="true">"saltos.app.download('app/emails/view/download/".check_ids(get_data("rest/4"))."')"</onclick>
                </button>
                <button onclick="saltos.driver.close()" label="Close" tooltip="To close this list" icon="x-lg" autoclose="true"/>
            </row>
        </layout>
        <javascript>
            <inline>saltos.driver.init("view")</inline>
        </javascript>
    </view>

    <view id="download">
        <check eval="true" logout="true">current_user()</check>
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"), get_data("rest/4"))</check>
        <output ifeval="get_data('rest/5')" require="apps/emails/php/getmail.php" eval="true">getmail_download(intval(get_data("rest/4")),get_data("rest/5"))</output>
        <output ifeval="!get_data('rest/5')" require="php/lib/pdf.php" eval="true">pdf("apps/emails/xml/pdf.xml", [
            "id" => check_ids(get_data("rest/4")),
        ])</output>
    </view>

    <delete>
        <check eval="true" logout="true">current_user()</check>
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"), get_data("rest/3"))</check>
        <text require="apps/emails/php/getmail.php" eval="true">getmail_delete(get_data("rest/3"))</text>
    </delete>

    <!-- Actions part -->
    <action id="server">
        <check eval="true" logout="true">current_user()</check>
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"))</check>
        <output require="apps/emails/php/getmail.php,apps/emails/php/sendmail.php" eval="true">array_merge(getmail_server(),sendmail_server())</output>
    </action>

    <action id="indexing">
        <check eval="true">true</check>
        <output require="apps/emails/php/indexing.php"/>
    </action>

    <action id="setup">
        <check eval="true">true</check>
        <output require="apps/emails/sample/setup.php"/>
    </action>
</root>
