<root>
    <!-- List part -->
    <list>
        <screen>clear</screen>
        <title>Email's list</title>
        <layout auto="true" container_class="container-fluid mt-3" col_class="col-auto">
            <button ifeval="check_user('emails', 'create')" onclick="saltos.core.open_window('#app/emails/create')" col_class="col-auto pe-0 me-1" class="btn btn-primary" value="New email" tooltip="To send a new email" icon="plus-lg"/>
            <div col_class="col p-0"/>
            <hidden id="page" value="0"/>
            <text col_class="col-auto p-0 ms-1" placeholder="Search" tooltip="To search in all emails contents" id="search"/>
            <button onclick="saltos.emails.search()" col_class="col-auto p-0 ms-1" class="btn btn-primary" value="Search" tooltip="To search in all emails contents" icon="search"/>
            <button onclick="saltos.emails.reset()" col_class="col-auto p-0 ms-1" class="btn btn-primary" value="Reset" tooltip="To reset the search filter" icon="x-lg"/>
            <button onclick="saltos.emails.delete1()" col_class="col-auto p-0 ms-1" class="btn btn-danger" value="Delete" tooltip="To delete the selected emails" icon="trash"/>
            <button onclick="saltos.emails.getmail()" col_class="col-auto ps-0 ms-1" class="btn btn-primary" value="Send/Receive" tooltip="To send and receive emails" icon="envelope"/>
            <table col_class="col-md-12 my-3" source="list/emails/table"/>
            <div col_class="col mb-3"/>
            <button onclick="saltos.emails.more()" col_class="col-auto mb-3 ps-0 ms-1" class="btn btn-primary" value="See more emails" tooltip="To load more emails in the list" icon="plus-lg"/>
        </layout>
        <javascript>
            <file eval="true">file_with_hash("apps/emails/app.js")</file>
            <inline>saltos.emails.initialize()</inline>
        </javascript>
    </list>

    <table checkbox="true" type="table" limit="50" order="datetime DESC">
        <header>
            <from_to label="From/To"/>
            <subject label="Subject"/>
            <date_time label="Date" align="center"/>
            <state label="State" class="state2" align="center"/>
            <files label="" type="icon" class="files2" align="center"/>
        </header>
        <data eval="true">execute_query_array("
            SELECT id, IF(is_outbox, `to`, `from`) from_to, subject,
                IF(DATE(datetime)=DATE(NOW()), DATE_FORMAT(datetime,'%H:%i:%s'), DATE_FORMAT(datetime,'%d/%m/%y')) date_time,
                TRIM(CONCAT_WS(' ',
                    CASE state_sent WHEN 1 THEN 'Sent' ELSE '' END,
                    CASE state_error WHEN '' THEN '' ELSE 'Error' END,
                    CASE WHEN is_outbox=1 AND state_sent=0 AND state_error='' THEN 'Unsent' ELSE '' END,
                    CASE state_new WHEN 1 THEN 'New' ELSE '' END,
                    CASE state_reply WHEN 1 THEN 'Reply' ELSE '' END,
                    CASE state_forward WHEN 1 THEN 'Forward' ELSE '' END,
                    CASE state_wait WHEN 1 THEN 'Wait' ELSE '' END,
                    CASE state_spam WHEN 1 THEN 'Spam' ELSE '' END,
                    CASE priority WHEN -1 THEN 'Low' WHEN 1 THEN 'High' ELSE '' END,
                    CASE sensitivity WHEN 1 THEN 'Personal' WHEN 2 THEN 'Private' WHEN 3 THEN 'Confidential' ELSE '' END,
                    CASE is_outbox+state_new+state_reply+state_forward+state_wait+state_spam+priority*10+sensitivity WHEN 0 THEN 'Read' ELSE '' END
                )) state,
                CASE WHEN state_error!='' THEN 'danger'
                    WHEN state_spam=1 THEN 'danger'
                    WHEN state_new=1 THEN 'success'
                    WHEN state_wait=1 THEN 'primary'
                    ELSE ''
                END state2,
                CASE WHEN files THEN 'paperclip' ELSE '' END files,
                CASE WHEN files THEN 'dark' ELSE '' END files2
            FROM app_emails
            WHERE 1 = 1
            AND ".make_fulltext_query(get_data("json/search"), "emails", ["minsize" => 1, "default" => "1=1"])."
            AND ".check_sql("emails", "list")."
            ORDER BY ".get_data("json/order")."
            LIMIT ".get_data("json/offset").",".get_data("json/limit")."
        ")</data>
        <actions eval="true">[
            ["app" => "emails", "action" => "view", "icon" => "search", "tooltip" => "View email"],
        ]</actions>
        <footer eval="true">"Total: " . execute_query("
            SELECT COUNT(*) total
            FROM app_emails
            WHERE 1 = 1
            AND ".make_fulltext_query(get_data("json/search"), "emails", ["minsize" => 1, "default" => "1=1"])."
            AND ".check_sql("emails", "list")."
        ")</footer>
    </table>

    <create>
        <screen>clear</screen>
        <title>New email</title>
        <layout auto="true" container_class="container mt-3" col_class="col-md-12 mb-3">
            <select id="from" label="From" required="true" autofocus="true">
                <rows eval="true">[
                    ["label"=>"address1@gmail.com","value"=>"address1@gmail.com"],
                    ["label"=>"address2@gmail.com","value"=>"address2@gmail.com"],
                    ["label"=>"address3@gmail.com","value"=>"address3@gmail.com"],
                ]</rows>
            </select>
            <text id="to" label="To"/>
            <text id="cc" label="CC"/>
            <text id="bcc" label="BCC"/>
            <checkbox id="state_crt" label="Request confirmation of receipt" col_class="col-sm-12 col-md-4 col-lg-6 mb-3"/>
            <select id="priority" label="Prioriry" col_class="col-sm-6 col-md-4 col-lg-3 mb-3">
                <rows eval="true">[
                    ["label"=>"Low","value"=>-1],
                    ["label"=>"Normal","value"=>0],
                    ["label"=>"High","value"=>1],
                ]</rows>
            </select>
            <select id="sensitivity" label="Sensitivity" col_class="col-sm-6 col-md-4 col-lg-3 mb-3">
                <rows eval="true">[
                    ["label"=>"Normal","value"=>0],
                    ["label"=>"Personal","value"=>1],
                    ["label"=>"Private","value"=>2],
                    ["label"=>"Confidential","value"=>3],
                ]</rows>
            </select>
            <text id="subject" label="Subject"/>
            <ckeditor id="body" label="Body" height="200px"/>
        </layout>
        <layout auto="true" container_class="container" col_class="col-auto">
            <div col_class="col mb-3"/>
            <button onclick="saltos.emails.send()" col_class="col-auto mb-3 p-0 ms-1" class="btn btn-primary" value="Send" tooltip="To send the email" icon="check-lg"/>
            <button onclick="saltos.emails.cancel()" col_class="col-auto mb-3 ps-0 ms-1" class="btn btn-primary" value="Cancel" tooltip="To cancel the email" icon="x-lg"/>
        </layout>
        <javascript>
            <file eval="true">file_with_hash("apps/emails/app.js")</file>
        </javascript>
    </create>

    <view>
        <screen>clear</screen>
        <title>Detail of the email</title>
        <layout auto="true" container_class="container mt-3" col_class="col-md-12 mb-3">
            <text id="from" label="From"/>
            <text id="to" label="To"/>
            <text id="cc" label="CC" require="apps/emails/php/getmail.php" ifeval="getmail_field('cc',intval(get_data('rest/3')))"/>
            <text id="bcc" label="BCC" ifeval="getmail_field('bcc',intval(get_data('rest/3')))"/>
            <datetime id="datetime" label="Datetime" col_class="col-sm-6 col-md-4 col-lg-3 mb-3"/>
            <text id="uidl" label="UIDL" col_class="col-sm-6 col-md-4 col-lg-3 mb-3"/>
            <select id="priority" label="Prioriry" col_class="col-sm-6 col-md-2 col-lg-3 mb-3">
                <rows eval="true">[
                    ["label"=>"Low","value"=>-1],
                    ["label"=>"Normal","value"=>0],
                    ["label"=>"High","value"=>1],
                ]</rows>
            </select>
            <select id="sensitivity" label="Sensitivity" col_class="col-sm-6 col-md-2 col-lg-3 mb-3">
                <rows eval="true">[
                    ["label"=>"Normal","value"=>0],
                    ["label"=>"Personal","value"=>1],
                    ["label"=>"Private","value"=>2],
                    ["label"=>"Confidential","value"=>3],
                ]</rows>
            </select>
            <checkbox id="state_sent" label="Sent" col_class="col-sm-3 col-md-2 col-lg-2 mb-3" ifeval="getmail_field('is_outbox',intval(get_data('rest/3')))"/>
            <checkbox id="state_new" label="New" col_class="col-sm-3 col-md-2 col-lg-2 mb-3" ifeval="!getmail_field('is_outbox',intval(get_data('rest/3')))"/>
            <checkbox id="state_reply" label="Reply" col_class="col-sm-3 col-md-2 col-lg-2 mb-3" ifeval="!getmail_field('is_outbox',intval(get_data('rest/3')))"/>
            <checkbox id="state_forward" label="Forward" col_class="col-sm-3 col-md-2 col-lg-2 mb-3"/>
            <checkbox id="state_wait" label="Pending" col_class="col-sm-3 col-md-2 col-lg-2 mb-3"/>
            <checkbox id="state_spam" label="SPAM" col_class="col-sm-3 col-md-2 col-lg-2 mb-3" ifeval="!getmail_field('is_outbox',intval(get_data('rest/3')))"/>
            <checkbox id="state_crt" label="Request confirmation of receipt" col_class="col-sm-9 col-md-6 col-lg-6 mb-3"/>
            <text id="subject" label="Subject"/>
            <iframe id="body" label="Body" height="200px" srcdoc="Loading...">
                <source eval="true">"app/emails/view/body/".intval(get_data("rest/3"))</source>
            </iframe>
            <table id="files" label="Files" col_class="col-md-12 mb-3" ifeval="count(getmail_files(intval(get_data('rest/3'))))">
                <source eval="true">"list/emails/view/files/".intval(get_data("rest/3"))</source>
            </table>
        </layout>
        <data eval="true">execute_query("SELECT `from`,`to`,cc,bcc,datetime,uidl,priority,sensitivity,state_sent,state_new,state_reply,state_forward,state_wait,state_spam,state_crt,subject
            FROM app_emails WHERE id=".intval(get_data("rest/3"))." AND ".check_sql(get_data("rest/1"), get_data("rest/2")))</data>
        <layout auto="true" container_class="container" col_class="col-auto">
            <button col_class="col-auto mb-3 pe-0 me-1" class="btn btn-primary" value="Source" tooltip="To see the source of this email" icon="file-text">
                <onclick eval="true">"saltos.core.open_window('#app/emails/view/source/".intval(get_data("rest/3"))."')"</onclick>
            </button>
            <button ifeval="!getmail_field('is_outbox',intval(get_data('rest/3'))) AND !getmail_field('state_new',intval(get_data('rest/3')))"
                onclick="saltos.emails.setter('new=1')" col_class="col-auto mb-3 p-0 me-1" class="btn btn-success" value="New" tooltip="To mark this email as new" icon="patch-check"/>

            <button ifeval="!getmail_field('is_outbox',intval(get_data('rest/3'))) AND getmail_field('state_new',intval(get_data('rest/3')))"
                onclick="saltos.emails.setter('new=0')" col_class="col-auto mb-3 p-0 me-1" class="btn btn-success" value="No new" tooltip="To unmark this email as new" icon="patch-check"/>
            <button ifeval="!getmail_field('state_wait',intval(get_data('rest/3')))"
                onclick="saltos.emails.setter('wait=1')" col_class="col-auto mb-3 p-0 me-1" class="btn btn-primary" value="Wait" tooltip="To mark this email as wait" icon="patch-question"/>
            <button ifeval="getmail_field('state_wait',intval(get_data('rest/3')))"
                onclick="saltos.emails.setter('wait=0')" col_class="col-auto mb-3 p-0 me-1" class="btn btn-primary" value="No wait" tooltip="To unmark this email as wait" icon="patch-question"/>
            <button ifeval="!getmail_field('is_outbox',intval(get_data('rest/3'))) AND !getmail_field('state_spam',intval(get_data('rest/3')))"
                onclick="saltos.emails.setter('spam=1')" col_class="col-auto mb-3 p-0 me-1" class="btn btn-danger" value="Spam" tooltip="To mark this email as spam" icon="patch-exclamation"/>
            <button ifeval="!getmail_field('is_outbox',intval(get_data('rest/3'))) AND getmail_field('state_spam',intval(get_data('rest/3')))"
                onclick="saltos.emails.setter('spam=0')" col_class="col-auto mb-3 p-0 me-1" class="btn btn-danger" value="No spam" tooltip="To unmark this email as spam" icon="patch-exclamation"/>
            <div col_class="col mb-3"/>
            <button ifeval="!getmail_field('is_outbox',intval(get_data('rest/3')))" col_class="col-auto mb-3 p-0 ms-1" class="btn btn-primary" value="Reply" tooltip="To reply this email" icon="reply">
                <onclick eval="true">"saltos.core.open_window('#app/emails/create/reply/".intval(get_data("rest/3"))."')"</onclick>
            </button>
            <button ifeval="!getmail_field('is_outbox',intval(get_data('rest/3')))" col_class="col-auto mb-3 p-0 ms-1" class="btn btn-primary" value="Reply all" tooltip="To reply all this email" icon="reply-all">
                <onclick eval="true">"saltos.core.open_window('#app/emails/create/replyall/".intval(get_data("rest/3"))."')"</onclick>
            </button>
            <button col_class="col-auto mb-3 p-0 ms-1" class="btn btn-primary" value="Forward" tooltip="To forward this email" icon="forward">
                <onclick eval="true">"saltos.core.open_window('#app/emails/create/forward/".intval(get_data("rest/3"))."')"</onclick>
            </button>
            <button onclick="saltos.emails.delete2()" col_class="col-auto mb-3 p-0 ms-1" class="btn btn-danger" value="Delete" tooltip="To delete this email" icon="trash"/>
            <button onclick="saltos.emails.close()" col_class="col-auto mb-3 ps-0 ms-1" class="btn btn-primary" value="Close" tooltip="To close this email" icon="x-lg"/>
        </layout>
        <javascript>
            <file eval="true">file_with_hash("apps/emails/app.js")</file>
            <inline>saltos.app.form_disabled(true)</inline>
        </javascript>
    </view>

    <view id="body">
        <srcdoc require="apps/emails/php/getmail.php" eval="true">getmail_body(intval(get_data("rest/4")))</srcdoc>
    </view>

    <view id="files" checkbox="true" dropdown="false" type="table">
        <header>
            <name>Filename</name>
            <size>Size</size>
        </header>
        <data require="apps/emails/php/getmail.php" eval="true">getmail_files(intval(get_data("rest/4")))</data>
        <actions eval="true">[
            ["app" => "emails", "action" => "view/viewpdf", "icon" => "search", "tooltip" => "Ver adjunto"],
            ["app" => "emails", "action" => "view/download", "icon" => "save", "tooltip" => "Descargar adjunto", "onclick" => "saltos.emails.download"],
        ]</actions>
    </view>

    <view id="source">
        <screen>clear</screen>
        <title>Source of the email</title>
        <layout auto="true" container_class="container-fluid mt-3" col_class="col-md-12 mb-3">
            <iframe height="200px">
                <srcdoc require="apps/emails/php/getmail.php" eval="true">getmail_source(intval(get_data("rest/4")))</srcdoc>
            </iframe>
        </layout>
    </view>

    <view id="viewpdf">
        <screen>clear</screen>
        <title require="apps/emails/php/getmail.php" eval="true">getmail_cid(intval(get_data("rest/4")),get_data("rest/5"))["name"]</title>
        <layout auto="true" container_class="container-fluid mt-3" col_class="col-md-12 mb-3">
            <pdfjs>
                <srcdoc eval="true">getmail_viewpdf(intval(get_data("rest/4")),get_data("rest/5"))</srcdoc>
            </pdfjs>
        </layout>
    </view>

    <view id="download">
        <file require="apps/emails/php/getmail.php" eval="true">getmail_download(intval(get_data("rest/4")),get_data("rest/5"))</file>
    </view>

    <action id="getmail">
        <array require="apps/emails/php/getmail.php" eval="true">getmail_receive()</array>
    </action>

    <action id="delete">
        <text require="apps/emails/php/getmail.php" eval="true">getmail_delete(get_data("json/ids"))</text>
    </action>

    <action id="setter">
        <text require="apps/emails/php/getmail.php" eval="true">getmail_setter(get_data("json/ids"), get_data("json/what"))</text>
    </action>

    <!-- TODO -->
</root>
