<root>
    <screen>TODO</screen>

    <!-- List part -->
    <list default="true">
        <check eval="true" logout="true">current_user()</check>
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"))</check>
        <gettext eval="true">T()</gettext>
        <title eval="true">T(app2name(get_data("rest/1"))) . ' - ' . T("List of registers")</title>
        <screen eval="true">xmlfile2array(detect_app_file(get_data("rest/1")))["screen"]</screen>
        <navbar eval="true">xmlfile2array("apps/common/xml/navbar.xml")["navbar"]</navbar>
        <layout append="one">
            <row auto="true" row_class="row g-1" col_class="col-auto">
                <button onclick="saltos.app.filter()" tooltip="Show and hide the search form" icon="funnel" col_class="col-auto"/>
                <button ifeval="check_user(get_data('rest/1'), 'create')" label="New register" tooltip="To create a new register" icon="plus-lg" color="success">
                    <onclick eval="true">"saltos.driver.open('app/".get_data("rest/1")."/create')"</onclick>
                </button>
                <div col_class="col"/>
                <hidden id="page" value="0"/>
                <text placeholder="Search" tooltip="To search in all contents" id="search" accesskey="ctrl+shift+f" onenter="document.getElementById('search_extra').value=this.value;saltos.driver.search()" autofocus="true" onchange="document.getElementById('search_extra').value=this.value"/>
                <button onclick="saltos.driver.search()" label="Search" tooltip="To search in all contents" icon="search"/>
                <button onclick="saltos.driver.reset()" label="Reset" tooltip="To reset the search filter" icon="x-lg"/>
            </row>
            <div eval="true">xmlfile2array("apps/common/xml/filter.xml")["div"]</div>
            <row auto="true" col_class="col-md-12 my-3">
                <table id="table" nodata="Loading..."/>
            </row>
            <row auto="true" row_class="row g-1" col_class="col-auto">
                <div col_class="col"/>
                <button id="more" onclick="saltos.driver.more()" label="Load more registers" tooltip="To load more registers to the list" icon="plus-lg"/>
            </row>
        </layout>
        <javascript>
            <inline>saltos.driver.init("list")</inline>
        </javascript>
    </list>

    <list id="table" dropdown="false" type="table" nodata="Data not found">
        <check eval="true" logout="true">current_user()</check>
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"))</check>
        <header>TODO</header>
        <temp eval="true">[
            set_config("app/".get_data("rest/1")."/list/filter/last", json_encode(get_data("json"), JSON_FORCE_OBJECT), current_user()),
            set_data("json/search", strval(get_data("json/search"))),
            set_data("json/page", intval(get_data("json/page"))),
            set_data("json/order", "id DESC"),
            set_data("json/limit", 25),
            set_data("json/offset", intval(get_data("json/page") * get_data("json/limit"))),
        ]</temp>
        <data eval="true">merge_data_actions(
            execute_query_array("
                SELECT id, TODO
                FROM ".app2table(get_data("rest/1"))."
                WHERE 1 = 1
                AND ".make_fulltext_query(get_data("json/search"), get_data("rest/1"), ["minsize" => 1, "default" => "1=1"])."
                AND ".check_sql(get_data("rest/1"), "list")."
                ORDER BY ".get_data("json/order")."
                LIMIT ".get_data("json/offset").",".get_data("json/limit")),
            xpath_search_first_value("list[id=table]/actions", xmlfile2array(detect_app_file(get_data("rest/1"))))
        )</data>
        <actions ifeval="false">
            <action action="view" icon="search" tooltip="View" onclick="saltos.driver.open">
                <app eval="true">get_data("rest/1")</app>
            </action>
            <action action="edit" icon="pencil" tooltip="Edit" onclick="saltos.driver.open">
                <app eval="true">get_data("rest/1")</app>
            </action>
            <action action="delete" icon="trash" color="danger" tooltip="Delete" onclick="saltos.driver.delete">
                <app eval="true">get_data("rest/1")</app>
            </action>
        </actions>
        <footer ifeval="!get_data('json/page')" eval="true">"Total: " . execute_query("
            SELECT COUNT(*) total
            FROM ".app2table(get_data("rest/1"))."
            WHERE 1 = 1
            AND ".make_fulltext_query(get_data("json/search"), get_data("rest/1"), ["minsize" => 1, "default" => "1=1"])."
            AND ".check_sql(get_data("rest/1"), "list")."
        ")</footer>
    </list>

    <list id="filter" eval="true">xmlfile2array("apps/common/xml/filter.xml")["list"]</list>

    <!-- Form part -->
    <form>TODO</form>
    <data eval="true">execute_query("SELECT * FROM ".app2table(get_data("rest/1"))."
        WHERE id = ? AND ".check_sql(get_data("rest/1"), get_data("rest/2")), [intval(get_data("rest/3"))])</data>

    <create>
        <check eval="true" logout="true">current_user()</check>
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"))</check>
        <gettext eval="true">T()</gettext>
        <title eval="true">T(app2name(get_data("rest/1"))) . ' - ' . T("New register")</title>
        <screen eval="true">xmlfile2array(detect_app_file(get_data("rest/1")))["screen"]</screen>
        <navbar eval="true">xmlfile2array("apps/common/xml/navbar.xml")["navbar"]</navbar>
        <layout append="two,one">
            <row auto="true" col_class="col-md-12 mb-3" eval="true">xmlfile2array(detect_app_file(get_data("rest/1")))["form"]</row>
            <row auto="true" col_class="col-md-6 mb-3" eval="true">xmlfile2array("apps/common/xml/files.xml")["form"]</row>
            <row auto="true" col_class="col-md-6 mb-3" eval="true">xmlfile2array("apps/common/xml/notes.xml")["form"]</row>
            <row auto="true" row_class="row g-1" col_class="col-auto">
                <div col_class="col"/>
                <button onclick="saltos.driver.insert()" label="Create" tooltip="To create the new register" icon="check-lg" color="success"/>
                <button onclick="saltos.driver.cancel()" label="Cancel" tooltip="To cancel the new register creation" icon="x-lg" autoclose="true" color="danger"/>
            </row>
        </layout>
        <javascript>
            <inline>saltos.driver.init("create")</inline>
        </javascript>
    </create>

    <create id="insert">
        <check eval="true" logout="true">current_user()</check>
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"))</check>
        <output require="php/lib/actions.php" eval="true">insert(get_data("rest/1"), get_data("json"))</output>
    </create>

    <view>
        <check eval="true" logout="true">current_user()</check>
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"), get_data("rest/3"))</check>
        <gettext eval="true">T()</gettext>
        <title eval="true">T(app2name(get_data("rest/1"))) . ' - ' . T("Detail of the register")</title>
        <screen eval="true">xmlfile2array(detect_app_file(get_data("rest/1")))["screen"]</screen>
        <navbar eval="true">xmlfile2array("apps/common/xml/navbar.xml")["navbar"]</navbar>
        <layout append="two,one">
            <row auto="true" col_class="col-md-12 mb-3" eval="true">xmlfile2array(detect_app_file(get_data("rest/1")))["form"]</row>
            <row auto="true" col_class="col-md-6 mb-3" eval="true">xmlfile2array("apps/common/xml/files.xml")["form"]</row>
            <row auto="true" col_class="col-md-6 mb-3" eval="true">xmlfile2array("apps/common/xml/notes.xml")["form"]</row>
            <row auto="true" row_class="row g-1" col_class="col-auto">
                <button label="History" tooltip="To see the history of the changes" icon="file-text" ifeval="app2version(get_data('rest/1')) * check_user(get_data('rest/1'), 'version')">
                    <onclick eval="true">"saltos.driver.open('app/".get_data("rest/1")."/view/version/".intval(get_data("rest/3"))."')"</onclick>
                </button>
                <div col_class="col"/>
                <button label="Edit" tooltip="To edit this register" icon="pencil" ifeval="check_user(get_data('rest/1'), 'edit')">
                    <onclick eval="true">"saltos.driver.open('app/".get_data("rest/1")."/edit/".intval(get_data("rest/3"))."')"</onclick>
                </button>
                <button onclick="saltos.driver.delete()" color="danger" label="Delete" tooltip="To delete this register" icon="trash" ifeval="check_user(get_data('rest/1'), 'delete')"/>
                <button onclick="saltos.driver.close()" label="Close" tooltip="To close the detail of this register" icon="x-lg" autoclose="true"/>
                <button onclick="saltos.driver.close(true)" col_class="d-none" accesskey="escape"/>
            </row>
        </layout>
        <data eval="true">xmlfile2array(detect_app_file(get_data("rest/1")))["data"]</data>
        <javascript>
            <inline>saltos.driver.init("view")</inline>
        </javascript>
    </view>

    <view id="files" eval="true">xpath_search_first("view[id=files]", xmlfile2array("apps/common/xml/files.xml"))</view>
    <view id="notes" eval="true">xpath_search_first("view[id=notes]", xmlfile2array("apps/common/xml/notes.xml"))</view>
    <view id="viewpdf" eval="true">xpath_search_first("view[id=viewpdf]", xmlfile2array("apps/common/xml/files.xml"))</view>
    <view id="download" eval="true">xpath_search_first("view[id=download]", xmlfile2array("apps/common/xml/files.xml"))</view>
    <view id="version" eval="true">xpath_search_first("view[id=version]", xmlfile2array("apps/common/xml/version.xml"))</view>

    <edit>
        <check eval="true" logout="true">current_user()</check>
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"), get_data("rest/3"))</check>
        <gettext eval="true">T()</gettext>
        <title eval="true">T(app2name(get_data("rest/1"))) . ' - ' . T("Modify this register")</title>
        <screen eval="true">xmlfile2array(detect_app_file(get_data("rest/1")))["screen"]</screen>
        <navbar eval="true">xmlfile2array("apps/common/xml/navbar.xml")["navbar"]</navbar>
        <layout append="two,one">
            <row auto="true" col_class="col-md-12 mb-3" eval="true">xmlfile2array(detect_app_file(get_data("rest/1")))["form"]</row>
            <row auto="true" col_class="col-md-6 mb-3" eval="true">xmlfile2array("apps/common/xml/files.xml")["form"]</row>
            <row auto="true" col_class="col-md-6 mb-3" eval="true">xmlfile2array("apps/common/xml/notes.xml")["form"]</row>
            <row auto="true" row_class="row g-1" col_class="col-auto">
                <div col_class="col"/>
                <button onclick="saltos.driver.update()" label="Save" tooltip="To save the changes of this register" icon="check-lg" color="success"/>
                <button onclick="saltos.driver.cancel()" label="Cancel" tooltip="To cancel the register modification" icon="x-lg" autoclose="true" color="danger"/>
            </row>
        </layout>
        <data eval="true">xmlfile2array(detect_app_file(get_data("rest/1")))["data"]</data>
        <javascript>
            <inline>saltos.driver.init("edit")</inline>
        </javascript>
    </edit>

    <edit id="update">
        <check eval="true" logout="true">current_user()</check>
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"), get_data("rest/4"))</check>
        <output require="php/lib/actions.php" eval="true">update(get_data("rest/1"), intval(get_data("rest/4")), get_data("json"))</output>
    </edit>

    <delete>
        <check eval="true" logout="true">current_user()</check>
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"), get_data("rest/3"))</check>
        <output require="php/lib/actions.php" eval="true">delete(get_data("rest/1"), intval(get_data("rest/3")))</output>
    </delete>

    <action id="setup">
        <check eval="true">file_exists("apps/".get_data("rest/1")."/sample/setup.php")</check>
        <output eval="true">require_once "apps/".get_data("rest/1")."/sample/setup.php"</output>
    </action>
</root>
