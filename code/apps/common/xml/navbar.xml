                        <item ifeval="check_user('fileslog', 'menu')" label="Log files" onclick="saltos.window.open('app/fileslog')"/>
                        <item divider="true"/>
                        <item ifeval="check_user('tester', 'menu')" label="Tester" onclick="saltos.window.open('app/tester')"/>
                    </menu>
                </item>
            </menu>
            <menu class="navbar-nav ms-auto mb-2 mb-lg-0">
                <item id="username" dropdown_menu_end="true" icon="person">
                    <label eval="true">execute_query("SELECT name FROM tbl_users WHERE id = ?", [current_user()])</label>
                    <menu>
                        <item label="Profile" onclick="saltos.app.profile()"/>
                        <item label="Help" onclick="saltos.app.help()"/>
                        <item label="Logout" onclick="saltos.app.logout()"/>
                    </menu>
                </item>
            </menu>
        </items>
    </navbar>
</root>
