<root>
    <navbar id="navbar" append="header" brand.image="img/logo_saltos.png" brand.alt="SaltOS" brand.width="155" brand.height="29">
        <items>
            <menu class="navbar-nav me-auto mb-2 mb-lg-0">
                <item label="Dashboard" onclick="saltos.window.open('app/dashboard')"/>
                <item label="Applications">
                    <menu>
                        <item ifeval="check_user('emails', 'menu')" label="Emails" onclick="saltos.window.open('app/emails')"/>
                        <item divider="true"/>
                        <item ifeval="check_user('customers', 'menu')" label="Customers" onclick="saltos.window.open('app/customers')"/>
                        <item ifeval="check_user('invoices', 'menu')" label="Invoices" onclick="saltos.window.open('app/invoices')"/>
                        <item divider="true"/>
                        <item ifeval="check_user('users', 'menu')" label="Users" onclick="saltos.window.open('app/users')"/>
                        <item ifeval="check_user('groups', 'menu')" label="Groups" onclick="saltos.window.open('app/groups')"/>
                        <item divider="true"/>
                        <item ifeval="check_user('types', 'menu')" label="Types" onclick="saltos.window.open('app/types')"/>
                        <item divider="true"/>
                        <item ifeval="check_user('configlog', 'menu')" label="Config" onclick="saltos.window.open('app/configlog')"/>
                        <item ifeval="check_user('cronlog', 'menu')" label="Cron" onclick="saltos.window.open('app/cronlog')"/>
                        <item ifeval="check_user('pushlog', 'menu')" label="Push" onclick="saltos.window.open('app/pushlog')"/>
                        <item ifeval="check_user('trashlog', 'menu')" label="Trash" onclick="saltos.window.open('app/trashlog')"/>
                        <item ifeval="check_user('uploadlog', 'menu')" label="Upload" onclick="saltos.window.open('app/uploadlog')"/>
