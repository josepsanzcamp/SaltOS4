<root>
    <default>
        <actions>
            <action>layout</action>
            <action>login</action>
            <action>logout</action>
        </actions>
    </default>
    <layout>
        <method>json</method>
        <layout>
            <container class="container">
                <row>
                    <col class="col mb-3 mt-5 text-center">
                        <image class="nada" width="100px" height="100px">img/logo_red.svg</image>
                    </col>
                </row>
                <row>
                    <col class="col mb-3">
                        <text name="user" label="Username" required="true"></text>
                    </col>
                </row>
                <row>
                    <col class="col mb-3">
                        <password name="pass" label="Password" required="true"></password>
                    </col>
                </row>
                <row>
                    <col class="col mb-3 text-center">
                        <button class="btn-primary" onclick="alert(1);">Submit</button>
                    </col>
                </row>
            </container>
        </layout>
    </layout>
</root>
