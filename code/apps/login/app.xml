<root>
    <menu>
        <javascript>
            <inline>saltos.loading()</inline>
            <inline>saltos.clear_screen()</inline>
        </javascript>
        <layout>
            <div class="vh-100 d-flex bg-body-secondary">
                <layout auto="true" container_class="container m-auto bg-body rounded p-5" col_class="col mb-3" cols_per_row="1" container_style="max-width:400px">
                    <image width="100px" height="100px" value="core/img/logo_red.svg"  col_class="col mb-3 text-center"/>
                    <label class="fs-2 w-100 text-center" value="Please login"/>
                    <text id="user" label="Username" required="true"/>
                    <password id="pass" label="Password" required="true"/>
                    <button class="btn-primary w-100" onclick="saltos.login.authenticate();" value="Login" col_class="col my-3"/>
                    <label class="w-100 text-center" value="(C) 2023 The SaltOS Project" col_class="col mt-3"/>
                </layout>
            </div>
        </layout>
        <javascript>
            <file eval="true">file_with_hash("apps/login/app.js")</file>
            <inline>saltos.login.initialize()</inline>
        </javascript>
    </menu>
</root>
