<root>
    <!-- List part -->
    <list default="true">
        <check eval="true">check_app_perm_id_json(get_data("rest/1"), get_data("rest/2"))</check>
        <screen>clear</screen>
        <title>Types app</title>
        <navbar eval="true">xmlfile2array("apps/dashboard/xml/navbar.xml")["navbar"]</navbar>
        <layout>
            <container class="container-fluid">
                <row class="row">
                    <col id="list" class="col-xl-6 py-3 overflow-auto-xl">
                        <row auto="true" row_class="row g-1" col_class="col-auto">
                            <button ifeval="check_user('types', 'create')" onclick="saltos.types.open('#app/types/create')" value="New type" tooltip="To create a new type" icon="plus-lg"/>
                            <div col_class="col"/>
                            <hidden id="page" value="0"/>
                            <text placeholder="Buscar" tooltip="Para buscar en todos los types" id="search" accesskey="ctrl+f" autofocus="true" onenter="saltos.types.search()"/>
                            <button onclick="saltos.types.search()" value="Buscar" tooltip="Para buscar en todos los types" icon="search"/>
                            <button onclick="saltos.types.reset()" value="Limpiar" tooltip="Para limpiar el filtro" icon="x-lg"/>
                        </row>
                        <row auto="true" col_class="col-md-12 my-3">
                            <table id="table" source="list/types/table"/>
                        </row>
                        <row auto="true" row_class="row g-1" col_class="col-auto">
                            <div col_class="col"/>
                            <button onclick="saltos.types.more()" value="Ver m치s tipos" tooltip="Para cargar mas tipos en el listado" icon="plus-lg"/>
                        </row>
                    </col>
                    <col id="form" class="col-xl-6 py-3 overflow-auto-xl"></col>
                </row>
            </container>
        </layout>
        <javascript>
            <file eval="true">file_with_hash("apps/types/js/app.js")</file>
            <inline>saltos.types.initialize()</inline>
        </javascript>
    </list>

    <table checkbox="true" dropdown="false" type="table" limit="25" order="id DESC">
        <header>
            <name label="Name"/>
            <description label="Description"/>
            <active label="Active" type="icon"/>
        </header>
        <data eval="true">execute_query_array("
            SELECT id, name, description,
            CASE active WHEN 1 THEN 'check-lg text-success' ELSE 'x-lg text-danger' END active
            FROM app_types
            WHERE 1 = 1
            AND ".make_fulltext_query(get_data("json/search"), "types", ["minsize" => 1, "default" => "1=1"])."
            AND ".check_sql("types", "list")."
            ORDER BY ".get_data("json/order")."
            LIMIT ".get_data("json/offset").",".get_data("json/limit")."
        ")</data>
        <actions>
            <action app="types" action="view" icon="search" tooltip="View" onclick="saltos.types.open"/>
            <action app="types" action="edit" icon="pencil" tooltip="Edit" onclick="saltos.types.open"/>
            <action app="types" action="delete" icon="trash" tooltip="Delete" onclick="saltos.types.delete"/>
        </actions>
        <footer eval="true">"Total: " . execute_query("
            SELECT COUNT(*) total
            FROM app_types
            WHERE 1 = 1
            AND ".make_fulltext_query(get_data("json/search"), "types", ["minsize" => 1, "default" => "1=1"])."
            AND ".check_sql("types", "list")."
        ")</footer>
    </table>

    <!-- Form part -->
    <form>
        <switch id="active" label="Active"/>
        <text id="name" label="Name" required="true" autofocus="true"/>
        <textarea id="description" label="Description" required="true" height="10em"/>
    </form>
    <data eval="true">execute_query("SELECT * FROM app_types WHERE id=".intval(get_data("rest/3"))." AND ".check_sql(get_data("rest/1"), get_data("rest/2")))</data>

    <create>
        <check eval="true">check_app_perm_id_json(get_data("rest/1"), get_data("rest/2"))</check>
        <javascript>
            <inline>saltos.app.__form.fields = [];</inline>
        </javascript>
        <layout>
            <row auto="true" col_class="col-md-12 mb-3" eval="true">xmlfile2array("apps/types/xml/app.xml")["form"]</row>
            <row auto="true" row_class="row g-1" col_class="col-auto">
                <div col_class="col"/>
                <button onclick="saltos.types.insert('#app/types/insert')" value="Crear" tooltip="Para crear el nuevo tipo" icon="check-lg"/>
                <button onclick="saltos.types.close()" value="Cancelar" tooltip="Para cancelar la creaci칩n del nuevo tipo" icon="x-lg"/>
            </row>
        </layout>
    </create>

    <view>
        <check eval="true">check_app_perm_id_json(get_data("rest/1"), get_data("rest/2"), get_data("rest/3"))</check>
        <javascript>
            <inline>saltos.app.__form.fields = [];</inline>
        </javascript>
        <layout>
            <row auto="true" col_class="col-md-12 mb-3" eval="true">xmlfile2array("apps/types/xml/app.xml")["form"]</row>
            <row auto="true" row_class="row g-1" col_class="col-auto">
                <div col_class="col"/>
                <button value="Editar" tooltip="Para editar el tipo" icon="pencil">
                    <onclick eval="true">"saltos.types.open('#app/types/edit/".intval(get_data("rest/3"))."')"</onclick>
                </button>
                <button color="danger" value="Borrar" tooltip="Para borrar el tipo" icon="trash" accesskey="ctrl+delete">
                    <onclick eval="true">"saltos.types.delete('#app/types/delete/".intval(get_data("rest/3"))."')"</onclick>
                </button>
                <button onclick="saltos.types.close()" value="Cerrar" tooltip="Para cerrar el detalle del cliente" icon="x-lg"/>
            </row>
        </layout>
        <data eval="true">xmlfile2array("apps/types/xml/app.xml")["data"]</data>
        <javascript>
            <inline>saltos.app.form_disabled(true)</inline>
        </javascript>
    </view>

    <edit>
        <check eval="true">check_app_perm_id_json(get_data("rest/1"), get_data("rest/2"), get_data("rest/3"))</check>
        <javascript>
            <inline>saltos.app.__form.fields = [];</inline>
        </javascript>
        <layout>
            <row auto="true" col_class="col-md-12 mb-3" eval="true">xmlfile2array("apps/types/xml/app.xml")["form"]</row>
            <row auto="true" row_class="row g-1" col_class="col-auto">
                <div col_class="col"/>
                <button value="Guardar" tooltip="Para guardar los cambios del tipo" icon="check-lg">
                    <onclick eval="true">"saltos.types.update('#app/types/update/".intval(get_data("rest/3"))."')"</onclick>
                </button>
                <button onclick="saltos.types.close()" value="Cancelar" tooltip="Para cancelar la edici칩n del tipo" icon="x-lg"/>
            </row>
        </layout>
        <data eval="true">xmlfile2array("apps/types/xml/app.xml")["data"]</data>
    </edit>

</root>
