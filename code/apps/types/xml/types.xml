<root>
    <screen>type4</screen>

    <!-- List part -->
    <list default="true">
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"))</check>
        <gettext eval="true">T()</gettext>
        <title>Types list</title>
        <screen eval="true">xmlfile2array("apps/types/xml/types.xml")["screen"]</screen>
        <navbar eval="true">xmlfile2array("apps/dashboard/xml/navbar.xml")["navbar"]</navbar>
        <layout append="one">
            <row auto="true" row_class="row g-1" col_class="col-auto">
                <button onclick="saltos.app.filter()" tooltip="Show and hide the search form" icon="funnel" col_class="col-auto"/>
                <button ifeval="check_user('types', 'create')" onclick="saltos.driver.open('app/types/create')" label="New type" tooltip="To create a new type" icon="plus-lg"/>
                <div col_class="col"/>
                <hidden id="page" value="0"/>
                <text placeholder="Search" tooltip="To search in all contents" id="search" accesskey="ctrl+f" onenter="document.getElementById('search_extra').value=this.value;saltos.driver.search()" autofocus="true" onchange="document.getElementById('search_extra').value=this.value"/>
                <button onclick="saltos.driver.search()" label="Search" tooltip="To search in all contents" icon="search"/>
                <button onclick="saltos.driver.reset()" label="Reset" tooltip="To reset the search filter" icon="x-lg"/>
            </row>
            <div eval="true">xmlfile2array("apps/dashboard/xml/filter.xml")["div"]</div>
            <row auto="true" col_class="col-md-12 my-3">
                <table id="table" nodata="Loading..."/>
            </row>
            <row auto="true" row_class="row g-1" col_class="col-auto">
                <div col_class="col"/>
                <button id="more" onclick="saltos.driver.more()" label="Ver m치s tipos" tooltip="Para cargar mas tipos en el listado" icon="plus-lg"/>
            </row>
        </layout>
        <javascript>
            <inline>saltos.driver.init("list")</inline>
        </javascript>
    </list>

    <list id="table" dropdown="false" type="table" limit="25" order="id DESC" nodata="Data not found">
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"))</check>
        <header>
            <name label="Name"/>
            <description label="Description"/>
            <active label="Active" type="icon"/>
        </header>
        <temp eval="true">[
            set_config("app/".get_data("rest/1")."/list/filter/last", json_encode(get_data("json")), current_user()),
            set_data("json/search", strval(get_data("json/search"))),
            set_data("json/page", intval(get_data("json/page"))),
            set_data("json/order", "id DESC"),
            set_data("json/limit", 25),
            set_data("json/offset", intval(get_data("json/page") * get_data("json/limit"))),
        ]</temp>
        <data eval="true">merge_data_actions(
            execute_query_array("
                SELECT id, name, description,
                CASE active WHEN 1 THEN 'check-lg text-success' ELSE 'x-lg text-danger' END active
                FROM app_types
                WHERE 1 = 1
                AND ".make_fulltext_query(get_data("json/search"), "types", ["minsize" => 1, "default" => "1=1"])."
                AND ".check_sql("types", "list")."
                ORDER BY ".get_data("json/order")."
                LIMIT ".get_data("json/offset").",".get_data("json/limit")),
            xpath_search_first("list[id=table]/actions", xmlfile2array("apps/types/xml/types.xml"))
        )</data>
        <actions>
            <action app="types" action="view" icon="search" tooltip="View" onclick="saltos.driver.open"/>
            <action app="types" action="edit" icon="pencil" tooltip="Edit" onclick="saltos.driver.open"/>
            <action app="types" action="delete" icon="trash" tooltip="Delete" onclick="saltos.driver.delete"/>
        </actions>
        <footer ifeval="!get_data('json/page')" eval="true">"Total: " . execute_query("
            SELECT COUNT(*) total
            FROM app_types
            WHERE 1 = 1
            AND ".make_fulltext_query(get_data("json/search"), "types", ["minsize" => 1, "default" => "1=1"])."
            AND ".check_sql("types", "list")."
        ")</footer>
    </list>

    <list id="filter">
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"))</check>
        <output ifeval="get_data('server/request_method')=='GET'" eval="true">get_config_array("app/".get_data("rest/1")."/list/filter/", current_user())</output>
        <output eval="true">set_config("app/".get_data("rest/1")."/list/filter/".get_data("json/name"), get_data("json/val"), current_user())</output>
    </list>

    <!-- Form part -->
    <form>
        <switch id="active" label="Active"/>
        <text id="name" label="Name" required="true" autofocus="true"/>
        <textarea id="description" label="Description" required="true" height="10em"/>
    </form>
    <data eval="true">execute_query("SELECT * FROM app_types WHERE id=".intval(get_data("rest/3"))." AND ".check_sql(get_data("rest/1"), get_data("rest/2")))</data>

    <create>
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"))</check>
        <gettext eval="true">T()</gettext>
        <title>New type</title>
        <screen eval="true">xmlfile2array("apps/types/xml/types.xml")["screen"]</screen>
        <navbar eval="true">xmlfile2array("apps/dashboard/xml/navbar.xml")["navbar"]</navbar>
        <layout append="two,one">
            <row auto="true" col_class="col-md-12 mb-3" eval="true">xmlfile2array("apps/types/xml/types.xml")["form"]</row>
            <row auto="true" row_class="row g-1" col_class="col-auto">
                <div col_class="col"/>
                <button onclick="saltos.driver.insert()" label="Crear" tooltip="Para crear el nuevo cliente" icon="check-lg"/>
                <button onclick="saltos.driver.close()" label="Cancelar" tooltip="Para cancelar la creaci칩n del nuevo cliente" icon="x-lg" autoclose="true"/>
            </row>
        </layout>
        <javascript>
            <inline>saltos.driver.init("create")</inline>
        </javascript>
    </create>

    <create id="insert">
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"))</check>
        <output require="php/lib/actions.php" eval="true">insert(get_data("rest/1"), get_data("json"))</output>
    </create>

    <view>
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"), get_data("rest/3"))</check>
        <gettext eval="true">T()</gettext>
        <title>Detail of the type</title>
        <screen eval="true">xmlfile2array("apps/types/xml/types.xml")["screen"]</screen>
        <navbar eval="true">xmlfile2array("apps/dashboard/xml/navbar.xml")["navbar"]</navbar>
        <layout append="two,one">
            <row auto="true" col_class="col-md-12 mb-3" eval="true">xmlfile2array("apps/types/xml/types.xml")["form"]</row>
            <row auto="true" row_class="row g-1" col_class="col-auto">
                <div col_class="col"/>
                <button label="Editar" tooltip="Para editar el tipo" icon="pencil">
                    <onclick eval="true">"saltos.driver.open('app/types/edit/".intval(get_data("rest/3"))."')"</onclick>
                </button>
                <button onclick="saltos.driver.delete()" color="danger" label="Borrar" tooltip="Para borrar el cliente" icon="trash"/>
                <button onclick="saltos.driver.close()" label="Cerrar" tooltip="Para cerrar el detalle del cliente" icon="x-lg" autoclose="true"/>
            </row>
        </layout>
        <data eval="true">xmlfile2array("apps/types/xml/types.xml")["data"]</data>
        <javascript>
            <inline>saltos.driver.init("view")</inline>
        </javascript>
    </view>

    <edit>
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"), get_data("rest/3"))</check>
        <gettext eval="true">T()</gettext>
        <title>Modify this type</title>
        <screen eval="true">xmlfile2array("apps/types/xml/types.xml")["screen"]</screen>
        <navbar eval="true">xmlfile2array("apps/dashboard/xml/navbar.xml")["navbar"]</navbar>
        <layout append="two,one">
            <row auto="true" col_class="col-md-12 mb-3" eval="true">xmlfile2array("apps/types/xml/types.xml")["form"]</row>
            <row auto="true" row_class="row g-1" col_class="col-auto">
                <div col_class="col"/>
                <button onclick="saltos.driver.update()" label="Guardar" tooltip="Para guardar los cambios del cliente" icon="check-lg"/>
                <button onclick="saltos.driver.close()" label="Cancelar" tooltip="Para cancelar la edici칩n del cliente" icon="x-lg" autoclose="true"/>
            </row>
        </layout>
        <data eval="true">xmlfile2array("apps/types/xml/types.xml")["data"]</data>
        <javascript>
            <inline>saltos.driver.init("edit")</inline>
        </javascript>
    </edit>

    <edit id="update">
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"), get_data("rest/4"))</check>
        <output require="php/lib/actions.php" eval="true">update(get_data("rest/1"), intval(get_data("rest/4")), get_data("json"))</output>
    </edit>

    <delete>
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"), get_data("rest/3"))</check>
        <output require="php/lib/actions.php" eval="true">delete(get_data("rest/1"), intval(get_data("rest/3")))</output>
    </delete>
</root>
