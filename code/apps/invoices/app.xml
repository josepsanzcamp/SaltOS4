<root>
    <!-- List part -->
    <list>
        <screen>clear</screen>
        <title>Invoice's list</title>
        <layout auto="true" container_class="container my-3" row_class="row g-1" col_class="col-auto">
            <button ifeval="check_user('invoices', 'create')" onclick="saltos.window.open('#app/invoices/create')" value="Nueva factura" tooltip="Para crear una nueva factura" icon="plus-lg"/>
            <div col_class="col"/>
            <hidden id="page" value="0"/>
            <text placeholder="Buscar" tooltip="Para buscar en todos los invoices" id="search" accesskey="f"/>
            <button onclick="saltos.invoices.search()" value="Buscar" tooltip="Para buscar en todos los invoices" icon="search"/>
            <button onclick="saltos.invoices.reset()" value="Limpiar" tooltip="Para limpiar el filtro" icon="x-lg"/>
            <table col_class="col-md-12 my-3" source="list/invoices/table"/>
            <div col_class="col"/>
            <button onclick="saltos.invoices.more()" value="Ver más facturas" tooltip="Para cargar mas facturas en el listado" icon="plus-lg"/>
            <button onclick="saltos.window.close()" value="Close" tooltip="To close this list" icon="x-lg"/>
        </layout>
        <javascript>
            <file eval="true">file_with_hash("apps/invoices/app.js")</file>
            <inline>saltos.invoices.initialize_search()</inline>
            <inline>saltos.invoices.initialize_update_list()</inline>
        </javascript>
    </list>

    <table checkbox="true" type="table" limit="25" order="id DESC">
        <header>
            <nombre label="Nombre"/>
            <cif label="CIF"/>
            <nombre_poblacion label="Población"/>
            <nombre_codpostal label="C.P."/>
            <num label="Núm.Fact."/>
            <fecha label="Fecha"/>
            <total label="Total"/>
            <cerrado label="Cerrado" type="icon" align="center"/>
            <cobrado label="Cobrado" type="icon" align="center"/>
        </header>
        <data eval="true">execute_query_array("
            SELECT id, nombre, cif, nombre_poblacion, nombre_codpostal, num, fecha,
                ROUND((SELECT sum(unidades * precio * (1 - (descuento / 100))) FROM app_invoices_concepts b WHERE a.id = b.id_factura),2) total,
                IF(cerrado, 'check-lg text-success', 'x-lg text-danger') cerrado,
                IF(cobrado, 'check-lg text-success', 'x-lg text-danger') cobrado
            FROM app_invoices a
            WHERE 1 = 1
            AND ".make_fulltext_query(get_data("json/search"), "invoices", ["minsize" => 1, "default" => "1=1"])."
            AND ".check_sql("invoices", "list")."
            ORDER BY ".get_data("json/order")."
            LIMIT ".get_data("json/offset").",".get_data("json/limit")."
        ")</data>
        <actions>
            <action app="invoices" action="view" value="View" icon="search" tooltip="Ver detalle factura"/>
            <action app="invoices" action="edit" value="Edit" icon="pencil" tooltip="Editar factura"/>
            <action app="invoices" action="delete" value="Delete" icon="trash" tooltip="Borrar factura" onclick="saltos.invoices.delete1"/>
        </actions>
        <footer eval="true">"Total: " . execute_query("
            SELECT COUNT(*) total
            FROM app_invoices
            WHERE 1 = 1
            AND ".make_fulltext_query(get_data("json/search"), "invoices", ["minsize" => 1, "default" => "1=1"])."
            AND ".check_sql("invoices", "list")."
        ")</footer>
    </table>

    <!-- Form part -->
    <layout_header auto="true" container_class="container header mt-3" col_class="col-md-6 mb-3">
        <text id="nombre" label="nombre" required="true"/>
        <text id="direccion" label="direccion" required="true"/>
        <text id="nombre_pais" label="nombre_pais" required="true"/>
        <text id="nombre_provincia" label="nombre_provincia" required="true"/>
        <text id="nombre_poblacion" label="nombre_poblacion" required="true"/>
        <text id="nombre_codpostal" label="nombre_codpostal" required="true"/>
        <text id="cif" label="cif" required="true"/>
        <text id="num" label="num"/>
        <text id="fecha" label="fecha"/>
        <text id="fecha2" label="fecha2"/>
        <text id="iva" label="iva" required="true"/>
        <text id="irpf" label="irpf" required="true"/>
        <switch id="cerrado" label="cerrado"/>
        <switch id="cobrado" label="cobrado"/>
        <textarea id="notas" label="notas" col_class="col-md-12 mb-3"/>
    </layout_header>
    <layout_detail auto="true" container_class="container detail" col_class="col-md-6 mb-3" template_id="detail">
        <hidden id="id"/>
        <textarea id="concepto" label="concepto" col_class="col mb-3" required="true"/>
        <float id="unidades" label="unidades" col_class="col-md-1 mb-3" required="true"/>
        <float id="precio" label="precio" col_class="col-md-1 mb-3" required="true"/>
        <float id="descuento" label="descuento" col_class="col-md-1 mb-3"/>
        <text id="total" label="total" col_class="col-md-1 mb-3" ignore="true"/>
        <button onclick="saltos.invoices.remove_item(this)" label="-" icon="trash" col_class="col-auto mb-3" tooltip="Quitar este concepto"/>
    </layout_detail>
    <layout_footer auto="true" container_class="container footer" row_class="row align-items-center" col_class="col-md-6 mb-3">
        <div col_class="col mb-3"/>
        <text id="total" label="total" col_class="col-md-1 mb-3" ignore="true"/>
        <button onclick="saltos.invoices.add_item()" label="-" icon="plus-lg" col_class="col-auto mb-3" tooltip="Añadir mas conceptos"/>
    </layout_footer>
    <data_header eval="true">execute_query("SELECT * FROM app_invoices WHERE id=".intval(get_data("rest/3"))." AND ".check_sql(get_data("rest/1"), get_data("rest/2")))</data_header>
    <data_detail eval="true" template_id="detail">execute_query_array("SELECT *, ROUND(unidades * precio * (1 - (descuento / 100)),2) total FROM app_invoices_concepts WHERE id_factura=".intval(get_data("rest/3"))." AND ".check_sql(get_data("rest/1"), get_data("rest/2"))." ORDER BY id ASC")</data_detail>
    <data_footer eval="true">execute_query("SELECT id, ROUND(SUM(unidades * precio * (1 - (descuento / 100))),2) total FROM app_invoices_concepts WHERE id_factura=".intval(get_data("rest/3"))." AND ".check_sql(get_data("rest/1"), get_data("rest/2")))</data_footer>

    <create>
        <screen>clear</screen>
        <title>New invoice</title>
        <layout eval="true">xmlfile2array("apps/invoices/app.xml")["layout_header"]</layout>
        <layout eval="true">xmlfile2array("apps/invoices/app.xml")["layout_detail"]</layout>
        <layout eval="true">xmlfile2array("apps/invoices/app.xml")["layout_footer"]</layout>
        <layout auto="true" container_class="container" row_class="row g-1 mb-3" col_class="col-auto">
            <div col_class="col"/>
            <button onclick="saltos.invoices.insert()" value="Crear" tooltip="Para crear la nueva factura" icon="check-lg"/>
            <button onclick="saltos.window.close()" value="Cancelar" tooltip="Para cancelar la creación de la nueva factura" icon="x-lg"/>
        </layout>
        <javascript>
            <file eval="true">file_with_hash("apps/invoices/app.js")</file>
            <inline>saltos.invoices.initialize_inputs()</inline>
        </javascript>
    </create>

    <view>
        <screen>clear</screen>
        <title>Detail of the invoice</title>
        <layout eval="true">xmlfile2array("apps/invoices/app.xml")["layout_header"]</layout>
        <data eval="true">xmlfile2array("apps/invoices/app.xml")["data_header"]</data>
        <layout eval="true">xmlfile2array("apps/invoices/app.xml")["layout_detail"]</layout>
        <data eval="true">xmlfile2array("apps/invoices/app.xml")["data_detail"]</data>
        <layout eval="true">xmlfile2array("apps/invoices/app.xml")["layout_footer"]</layout>
        <data eval="true">xmlfile2array("apps/invoices/app.xml")["data_footer"]</data>
        <layout auto="true" container_class="container" row_class="row g-1 mb-3" col_class="col-auto">
            <div col_class="col"/>
            <button value="Editar" tooltip="Para editar la factura" icon="pencil">
                <onclick eval="true">"saltos.window.open('#app/invoices/edit/".intval(get_data("rest/3"))."')"</onclick>
            </button>
            <button onclick="saltos.invoices.delete2()" color="danger" value="Borrar" tooltip="Para borrar la factura" icon="trash"/>
            <button onclick="saltos.window.close()" value="Cerrar" tooltip="Para cerrar el detalle de la factura" icon="x-lg"/>
        </layout>
        <javascript>
            <inline>saltos.app.form_disabled(true)</inline>
            <file eval="true">file_with_hash("apps/invoices/app.js")</file>
            <inline>saltos.invoices.initialize_buttons()</inline>
            <inline>saltos.invoices.initialize_update_view()</inline>
        </javascript>
    </view>

    <edit>
        <screen>clear</screen>
        <title>Modify this invoice</title>
        <layout eval="true">xmlfile2array("apps/invoices/app.xml")["layout_header"]</layout>
        <data eval="true">xmlfile2array("apps/invoices/app.xml")["data_header"]</data>
        <layout eval="true">xmlfile2array("apps/invoices/app.xml")["layout_detail"]</layout>
        <data eval="true">xmlfile2array("apps/invoices/app.xml")["data_detail"]</data>
        <layout eval="true">xmlfile2array("apps/invoices/app.xml")["layout_footer"]</layout>
        <data eval="true">xmlfile2array("apps/invoices/app.xml")["data_footer"]</data>
        <layout auto="true" container_class="container" row_class="row g-1 mb-3" col_class="col-auto">
            <div col_class="col"/>
            <button onclick="saltos.invoices.update()" value="Guardar" tooltip="Para guardar los cambios de la factura" icon="check-lg"/>
            <button onclick="saltos.window.close()" value="Cancelar" tooltip="Para cancelar la edición de la factura" icon="x-lg"/>
        </layout>
        <javascript>
            <file eval="true">file_with_hash("apps/invoices/app.js")</file>
            <inline>saltos.invoices.initialize_inputs()</inline>
        </javascript>
    </edit>

</root>
