<root>
    <!-- List part -->
    <list>
        <javascript>
            <inline>saltos.loading()</inline>
            <inline>saltos.clear_screen()</inline>
        </javascript>
        <layout auto="true" container_class="container mt-3" col_class="col-auto">
            <button ifeval="check_user('invoices', 'create')" onclick="saltos.open_window('#app/invoices/create')" col_class="col-auto pe-0" class="btn btn-primary" value="Nuevo cliente" tooltip="Para crear un nuevo cliente" icon="plus-lg"/>
            <div col_class="col p-0"/>
            <hidden id="page" value="0"/>
            <text col_class="col-auto p-0" placeholder="Buscar" tooltip="Para buscar en todos los invoices" id="search"/>
            <button onclick="saltos.invoices.search()" col_class="col-auto p-0 ms-1" class="btn btn-primary" value="Buscar" tooltip="Para buscar en todos los invoices" icon="search"/>
            <button onclick="saltos.invoices.clear_filter()" col_class="col-auto ps-0 ms-1" class="btn btn-primary" value="Limpiar" tooltip="Para limpiar el filtro" icon="x-lg"/>
            <table col_class="col-md-12 my-3" source="list/invoices/table" id="table"/>
            <div col_class="col mb-3"/>
            <button onclick="saltos.invoices.read_more()" col_class="col-auto mb-3 ps-0 ms-1" class="btn btn-primary" value="Ver más correos" tooltip="Para cargar mas correos en el listado" icon="view-list"/>
        </layout>
        <javascript>
            <file eval="true">file_with_hash("apps/invoices/app.js")</file>
<!--
            <inline>saltos.invoices.initialize()</inline>
-->
        </javascript>
    </list>
    <table checkbox="true" type="table" id="table" limit="25" order="id DESC">
        <header>
            <nombre label="Nombre"/>
            <cif label="CIF"/>
            <nombre_poblacion label="Población"/>
            <nombre_codpostal label="C.P."/>
            <num label="Núm.Fact."/>
            <fecha label="Fecha"/>
            <total label="Total"/>
            <cerrado label="Cerrado" type="icon" align="center"/>
            <cobrado label="Cobrado" type="icon" align="center"/>
        </header>
        <data eval="true">execute_query_array("
            SELECT id, nombre, cif, nombre_poblacion, nombre_codpostal, num, fecha,
                ROUND((SELECT sum(unidades * precio * (1 - (descuento / 100))) FROM app_invoices_concepts b WHERE a.id = b.id_factura),2) total,
                IF(cerrado, 'check-lg text-success', 'x-lg text-danger') cerrado,
                IF(cobrado, 'check-lg text-success', 'x-lg text-danger') cobrado
            FROM app_invoices a
            WHERE 1 = 1
            AND ".make_fulltext_query(get_data("json/search"), "invoices", ["minsize" => 1, "default" => "1=1"])."
            AND ".check_sql("invoices", "list")."
            ORDER BY ".get_data("json/order")."
            LIMIT ".get_data("json/offset").",".get_data("json/limit")."
        ")</data>
        <actions>
            <action app="invoices" action="view" value="View" icon="search" tooltip="Ver detalle cliente"/>
            <action app="invoices" action="edit" value="Edit" icon="pencil" tooltip="Editar cliente"/>
            <action app="invoices" action="delete" value="Delete" icon="trash" tooltip="Borrar cliente"/>
        </actions>
        <footer eval="true">"Total: " . execute_query("
            SELECT COUNT(*) total
            FROM app_invoices
            WHERE 1 = 1
            AND ".make_fulltext_query(get_data("json/search"), "invoices", ["minsize" => 1, "default" => "1=1"])."
            AND ".check_sql("invoices", "list")."
        ")</footer>
    </table>

</root>
