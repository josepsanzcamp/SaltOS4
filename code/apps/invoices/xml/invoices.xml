<root>
    <screen>type5</screen>

    <!-- List part -->
    <list default="true">
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"))</check>
        <gettext eval="true">T()</gettext>
        <title>Invoice's list</title>
        <screen eval="true">xmlfile2array("apps/invoices/xml/invoices.xml")["screen"]</screen>
        <navbar eval="true">xmlfile2array("apps/common/xml/navbar.xml")["navbar"]</navbar>
        <layout append="one">
            <row auto="true" row_class="row g-1" col_class="col-auto">
                <button onclick="saltos.app.filter()" tooltip="Show and hide the search form" icon="funnel" col_class="col-auto"/>
                <button ifeval="check_user('invoices', 'create')" onclick="saltos.driver.open('app/invoices/create')" label="Nueva factura" tooltip="Para crear una nueva factura" icon="plus-lg"/>
                <div col_class="col"/>
                <hidden id="page" value="0"/>
                <text placeholder="Search" tooltip="To search in all contents" id="search" accesskey="ctrl+f" onenter="document.getElementById('search_extra').value=this.value;saltos.driver.search()" autofocus="true" onchange="document.getElementById('search_extra').value=this.value"/>
                <button onclick="saltos.driver.search()" label="Search" tooltip="To search in all contents" icon="search"/>
                <dropdown label="PDF" icon="filetype-pdf" tooltip="PDF options">
                    <menu>
                        <button label="View" tooltip="To see the invoice" icon="search" onclick="saltos.invoices.viewpdf()"/>
                        <button label="Download" tooltip="To download the invoice" icon="save" onclick="saltos.invoices.download()"/>
                    </menu>
                </dropdown>
                <button onclick="saltos.driver.reset()" label="Reset" tooltip="To reset the search filter" icon="x-lg"/>
            </row>
            <div eval="true">xmlfile2array("apps/common/xml/filter.xml")["div"]</div>
            <row auto="true" col_class="col-md-12 my-3">
                <table id="table" nodata="Loading..."/>
            </row>
            <row auto="true" row_class="row g-1" col_class="col-auto">
                <div col_class="col"/>
                <button id="more" onclick="saltos.driver.more()" label="Ver más facturas" tooltip="Para cargar mas facturas en el listado" icon="plus-lg"/>
            </row>
        </layout>
        <javascript>
            <file eval="true">file_with_hash(file_with_min("apps/invoices/js/invoices.js"))</file>
            <inline>saltos.driver.init("list")</inline>
        </javascript>
    </list>

    <list id="table" type="table" limit="25" order="id DESC" nodata="Data not found" checkbox="true">
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"))</check>
        <header>
            <nombre label="Nombre"/>
            <cif label="CIF"/>
            <nombre_poblacion label="Población"/>
            <nombre_codpostal label="C.P."/>
            <num label="Núm.Fact."/>
            <fecha label="Fecha"/>
            <total label="Total"/>
            <cerrado label="Cerrado" type="icon" align="center"/>
            <cobrado label="Cobrado" type="icon" align="center"/>
        </header>
        <temp eval="true">[
            set_config("app/".get_data("rest/1")."/list/filter/last", json_encode(get_data("json")), current_user()),
            set_data("json/search", strval(get_data("json/search"))),
            set_data("json/page", intval(get_data("json/page"))),
            set_data("json/order", "id DESC"),
            set_data("json/limit", 25),
            set_data("json/offset", intval(get_data("json/page") * get_data("json/limit"))),
        ]</temp>
        <data eval="true">merge_data_actions(
            execute_query_array("
                SELECT id, nombre, cif, nombre_poblacion, nombre_codpostal, num, fecha,
                    ROUND((SELECT sum(unidades * precio * (1 - (descuento / 100))) FROM app_invoices_concepts b WHERE a.id = b.id_factura),2) total,
                    IF(cerrado, 'check-lg text-success', 'x-lg text-danger') cerrado,
                    IF(cobrado, 'check-lg text-success', 'x-lg text-danger') cobrado
                FROM app_invoices a
                WHERE 1 = 1
                AND ".make_fulltext_query(get_data("json/search"), "invoices", ["minsize" => 1, "default" => "1=1"])."
                AND ".check_sql("invoices", "list")."
                ORDER BY ".get_data("json/order")."
                LIMIT ".get_data("json/offset").",".get_data("json/limit")),
            xpath_search_first_value("list[id=table]/actions", xmlfile2array("apps/invoices/xml/invoices.xml"))
        )</data>
        <actions>
            <action app="invoices" action="view" label="View" icon="search" tooltip="Ver detalle factura" onclick="saltos.driver.open"/>
            <action app="invoices" action="edit" label="Edit" icon="pencil" tooltip="Editar factura" onclick="saltos.driver.open"/>
            <action app="invoices" action="delete" label="Delete" icon="trash" tooltip="Borrar factura" onclick="saltos.driver.delete"/>
        </actions>
        <footer ifeval="!get_data('json/page')" eval="true">"Total: " . execute_query("
            SELECT COUNT(*) total
            FROM app_invoices
            WHERE 1 = 1
            AND ".make_fulltext_query(get_data("json/search"), "invoices", ["minsize" => 1, "default" => "1=1"])."
            AND ".check_sql("invoices", "list")."
        ")</footer>
    </list>

    <list id="filter" eval="true">xmlfile2array("apps/common/xml/filter.xml")["list"]</list>

    <!-- Form part -->
    <form_header>
        <text id="nombre" label="nombre" required="true"/>
        <text id="direccion" label="direccion" required="true"/>
        <text id="nombre_pais" label="nombre_pais" required="true"/>
        <text id="nombre_provincia" label="nombre_provincia" required="true"/>
        <text id="nombre_poblacion" label="nombre_poblacion" required="true"/>
        <text id="nombre_codpostal" label="nombre_codpostal" required="true"/>
        <text id="cif" label="cif" required="true"/>
        <text id="num" label="num"/>
        <text id="fecha" label="fecha"/>
        <text id="fecha2" label="fecha2"/>
        <text id="iva" label="iva" required="true"/>
        <text id="irpf" label="irpf" required="true"/>
        <switch id="cerrado" label="cerrado"/>
        <switch id="cobrado" label="cobrado"/>
        <textarea id="notas" label="notas" col_class="col-md-12 mb-3"/>
    </form_header>
    <form_detail>
        <hidden id="id"/>
        <textarea id="concepto" label="concepto" col_class="col mb-3" required="true"/>
        <float id="unidades" label="unidades" col_class="col-md-1 mb-3" required="true"/>
        <float id="precio" label="precio" col_class="col-md-1 mb-3" required="true"/>
        <float id="descuento" label="descuento" col_class="col-md-1 mb-3"/>
        <text id="total" label="total" col_class="col-md-1 mb-3" ignore="true"/>
        <button onclick="saltos.invoices.remove_item(this)" icon="trash" col_class="col-auto mb-3" tooltip="Quitar este concepto" addbr="true"/>
    </form_detail>
    <form_footer>
        <div col_class="col mb-3"/>
        <text id="total" label="total" col_class="col-md-1 mb-3" ignore="true"/>
        <button onclick="saltos.invoices.add_item()" icon="plus-lg" col_class="col-auto mb-3" tooltip="Añadir mas conceptos" addbr="true"/>
    </form_footer>
    <data_header eval="true">execute_query("SELECT * FROM app_invoices
        WHERE id = ? AND ".check_sql(get_data("rest/1"), get_data("rest/2")), [intval(get_data("rest/3"))])</data_header>
    <data_detail eval="true">execute_query_array("SELECT *, ROUND(unidades * precio * (1 - (descuento / 100)),2) total
        FROM app_invoices_concepts WHERE id_factura = ? AND ".check_sql(get_data("rest/1"), get_data("rest/2"))." ORDER BY id ASC", [intval(get_data("rest/3"))])</data_detail>
    <data_footer eval="true">execute_query("SELECT id, ROUND(SUM(unidades * precio * (1 - (descuento / 100))),2) total
        FROM app_invoices_concepts WHERE id_factura = ? AND ".check_sql(get_data("rest/1"), get_data("rest/2")), [intval(get_data("rest/3"))])</data_footer>

    <create>
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"))</check>
        <gettext eval="true">T()</gettext>
        <title>New invoice</title>
        <screen eval="true">xmlfile2array("apps/invoices/xml/invoices.xml")["screen"]</screen>
        <navbar eval="true">xmlfile2array("apps/common/xml/navbar.xml")["navbar"]</navbar>
        <layout append="two,one">
            <row auto="true" col_class="col-md-6 mb-3" row_class="row header" eval="true">xmlfile2array("apps/invoices/xml/invoices.xml")["form_header"]</row>
            <row auto="true" col_class="col-md-6 mb-3" row_class="row detail" template_id="detail" eval="true">xmlfile2array("apps/invoices/xml/invoices.xml")["form_detail"]</row>
            <row auto="true" col_class="col-md-6 mb-3" row_class="row footer" eval="true">xmlfile2array("apps/invoices/xml/invoices.xml")["form_footer"]</row>
            <row auto="true" col_class="col-md-6 mb-3" eval="true">xmlfile2array("apps/common/xml/files.xml")["form"]</row>
            <row auto="true" col_class="col-md-6 mb-3" eval="true">xmlfile2array("apps/common/xml/notes.xml")["form"]</row>
            <row auto="true" row_class="row g-1" col_class="col-auto">
                <div col_class="col"/>
                <button onclick="saltos.driver.insert()" label="Crear" tooltip="Para crear la nueva factura" icon="check-lg"/>
                <button onclick="saltos.driver.close()" label="Cancelar" tooltip="Para cancelar la creación de la nueva factura" icon="x-lg" autoclose="true"/>
            </row>
        </layout>
        <javascript>
            <file eval="true">file_with_hash(file_with_min("apps/invoices/js/invoices.js"))</file>
            <inline>saltos.invoices.init('create')</inline>
            <inline>saltos.driver.init("create")</inline>
        </javascript>
    </create>

    <create id="insert">
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"))</check>
        <output require="php/lib/actions.php" eval="true">insert(get_data("rest/1"), get_data("json"))</output>
    </create>

    <view>
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"), get_data("rest/3"))</check>
        <gettext eval="true">T()</gettext>
        <title>Detail of the invoice</title>
        <screen eval="true">xmlfile2array("apps/invoices/xml/invoices.xml")["screen"]</screen>
        <navbar eval="true">xmlfile2array("apps/common/xml/navbar.xml")["navbar"]</navbar>
        <layout append="two,one">
            <row auto="true" col_class="col-md-6 mb-3" row_class="row header" eval="true">xmlfile2array("apps/invoices/xml/invoices.xml")["form_header"]</row>
            <row auto="true" col_class="col-md-6 mb-3" row_class="row detail" template_id="detail" eval="true">xmlfile2array("apps/invoices/xml/invoices.xml")["form_detail"]</row>
            <row auto="true" col_class="col-md-6 mb-3" row_class="row footer" eval="true">xmlfile2array("apps/invoices/xml/invoices.xml")["form_footer"]</row>
            <row auto="true" col_class="col-md-6 mb-3" eval="true">xmlfile2array("apps/common/xml/files.xml")["form"]</row>
            <row auto="true" col_class="col-md-6 mb-3" eval="true">xmlfile2array("apps/common/xml/notes.xml")["form"]</row>
            <row auto="true" row_class="row g-1" col_class="col-auto">
                <dropdown label="PDF" icon="filetype-pdf" tooltip="PDF options">
                    <menu>
                        <button label="View" tooltip="To see the invoice" icon="search">
                            <onclick eval="true">"saltos.driver.open('app/invoices/view/viewpdf/".intval(get_data("rest/3"))."')"</onclick>
                        </button>
                        <button label="Download" tooltip="To download the invoice" icon="save">
                            <onclick eval="true">"saltos.app.download('app/invoices/view/download/".intval(get_data("rest/3"))."')"</onclick>
                        </button>
                    </menu>
                </dropdown>
                <div col_class="col"/>
                <button label="Editar" tooltip="Para editar la factura" icon="pencil">
                    <onclick eval="true">"saltos.driver.open('app/invoices/edit/".intval(get_data("rest/3"))."')"</onclick>
                </button>
                <button onclick="saltos.driver.delete()" color="danger" label="Borrar" tooltip="Para borrar la factura" icon="trash"/>
                <button onclick="saltos.driver.close()" label="Cerrar" tooltip="Para cerrar el detalle de la factura" icon="x-lg" autoclose="true"/>
                <button onclick="saltos.driver.close(true)" col_class="d-none" accesskey="escape"/>
            </row>
        </layout>
        <data eval="true">xmlfile2array("apps/invoices/xml/invoices.xml")["data_header"]</data>
        <data template_id="detail" eval="true">xmlfile2array("apps/invoices/xml/invoices.xml")["data_detail"]</data>
        <data eval="true">xmlfile2array("apps/invoices/xml/invoices.xml")["data_footer"]</data>
        <javascript>
            <file eval="true">file_with_hash(file_with_min("apps/invoices/js/invoices.js"))</file>
            <inline>saltos.invoices.init('view')</inline>
            <inline>saltos.driver.init("view")</inline>
        </javascript>
    </view>

    <view id="files" eval="true">xpath_search_first("view[id=files]", xmlfile2array("apps/common/xml/files.xml"))</view>
    <view id="notes" eval="true">xpath_search_first("view[id=notes]", xmlfile2array("apps/common/xml/notes.xml"))</view>
    <view id="viewpdf" eval="true">xpath_search_first("view[id=viewpdf]", xmlfile2array("apps/common/xml/files.xml"))</view>
    <view id="download" eval="true">xpath_search_first("view[id=download]", xmlfile2array("apps/common/xml/files.xml"))</view>

    <edit>
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"), get_data("rest/3"))</check>
        <gettext eval="true">T()</gettext>
        <title>Modify this invoice</title>
        <screen eval="true">xmlfile2array("apps/invoices/xml/invoices.xml")["screen"]</screen>
        <navbar eval="true">xmlfile2array("apps/common/xml/navbar.xml")["navbar"]</navbar>
        <layout append="two,one">
            <row auto="true" col_class="col-md-6 mb-3" row_class="row header" eval="true">xmlfile2array("apps/invoices/xml/invoices.xml")["form_header"]</row>
            <row auto="true" col_class="col-md-6 mb-3" row_class="row detail" template_id="detail" eval="true">xmlfile2array("apps/invoices/xml/invoices.xml")["form_detail"]</row>
            <row auto="true" col_class="col-md-6 mb-3" row_class="row footer" eval="true">xmlfile2array("apps/invoices/xml/invoices.xml")["form_footer"]</row>
            <row auto="true" col_class="col-md-6 mb-3" eval="true">xmlfile2array("apps/common/xml/files.xml")["form"]</row>
            <row auto="true" col_class="col-md-6 mb-3" eval="true">xmlfile2array("apps/common/xml/notes.xml")["form"]</row>
            <row auto="true" row_class="row g-1" col_class="col-auto">
                <div col_class="col"/>
                <button onclick="saltos.driver.update()" label="Guardar" tooltip="Para guardar los cambios de la factura" icon="check-lg"/>
                <button onclick="saltos.driver.close()" label="Cancelar" tooltip="Para cancelar la edición de la factura" icon="x-lg" autoclose="true"/>
            </row>
        </layout>
        <data eval="true">xmlfile2array("apps/invoices/xml/invoices.xml")["data_header"]</data>
        <data template_id="detail" eval="true">xmlfile2array("apps/invoices/xml/invoices.xml")["data_detail"]</data>
        <data eval="true">xmlfile2array("apps/invoices/xml/invoices.xml")["data_footer"]</data>
        <javascript>
            <file eval="true">file_with_hash(file_with_min("apps/invoices/js/invoices.js"))</file>
            <inline>saltos.invoices.init('edit')</inline>
            <inline>saltos.driver.init("edit")</inline>
        </javascript>
    </edit>

    <edit id="update">
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"), get_data("rest/4"))</check>
        <output require="php/lib/actions.php" eval="true">update(get_data("rest/1"), intval(get_data("rest/4")), get_data("json"))</output>
    </edit>

    <delete>
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"), get_data("rest/3"))</check>
        <output require="php/lib/actions.php" eval="true">delete(get_data("rest/1"), intval(get_data("rest/3")))</output>
    </delete>

    <!-- Actions part -->
    <action id="setup">
        <check eval="true">true</check>
        <output require="apps/invoices/sample/setup.php"/>
    </action>
</root>
