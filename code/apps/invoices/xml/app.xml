<root>
    <screen>type2</screen>

    <!-- List part -->
    <list default="true">
        <check eval="true">check_app_perm_id_json(get_data("rest/1"), get_data("rest/2"))</check>
        <gettext eval="true">T([])</gettext>
        <title>Invoice's list</title>
        <screen eval="true">xmlfile2array("apps/invoices/xml/app.xml")["screen"]</screen>
        <navbar eval="true">xmlfile2array("apps/dashboard/xml/navbar.xml")["navbar"]</navbar>
        <layout append="one">
            <row auto="true" row_class="row g-1" col_class="col-auto">
                <button ifeval="check_user('invoices', 'create')" onclick="saltos.driver.open('app/invoices/create')" label="Nueva factura" tooltip="Para crear una nueva factura" icon="plus-lg"/>
                <div col_class="col"/>
                <hidden id="page" value="0"/>
                <text placeholder="Search" tooltip="To search in all contents" id="search" accesskey="ctrl+f" onenter="saltos.driver.search()" autofocus="true"/>
                <button onclick="saltos.driver.search()" label="Search" tooltip="To search in all contents" icon="search"/>
                <button onclick="saltos.driver.reset()" label="Reset" tooltip="To reset the search filter" icon="x-lg"/>
            </row>
            <row auto="true" col_class="col-md-12 my-3">
                <table id="table" source="list/invoices/table"/>
            </row>
            <row auto="true" row_class="row g-1" col_class="col-auto">
                <div col_class="col"/>
                <button onclick="saltos.driver.more()" label="Ver más facturas" tooltip="Para cargar mas facturas en el listado" icon="plus-lg"/>
            </row>
        </layout>
        <javascript>
            <inline>saltos.driver.init("list")</inline>
        </javascript>
    </list>

    <!-- Form part -->
    <form_header>
        <text id="nombre" label="nombre" required="true"/>
        <text id="direccion" label="direccion" required="true"/>
        <text id="nombre_pais" label="nombre_pais" required="true"/>
        <text id="nombre_provincia" label="nombre_provincia" required="true"/>
        <text id="nombre_poblacion" label="nombre_poblacion" required="true"/>
        <text id="nombre_codpostal" label="nombre_codpostal" required="true"/>
        <text id="cif" label="cif" required="true"/>
        <text id="num" label="num"/>
        <text id="fecha" label="fecha"/>
        <text id="fecha2" label="fecha2"/>
        <text id="iva" label="iva" required="true"/>
        <text id="irpf" label="irpf" required="true"/>
        <switch id="cerrado" label="cerrado"/>
        <switch id="cobrado" label="cobrado"/>
        <textarea id="notas" label="notas" col_class="col-md-12 mb-3"/>
    </form_header>
    <form_detail>
        <hidden id="id"/>
        <textarea id="concepto" label="concepto" col_class="col mb-3" required="true"/>
        <float id="unidades" label="unidades" col_class="col-md-1 mb-3" required="true"/>
        <float id="precio" label="precio" col_class="col-md-1 mb-3" required="true"/>
        <float id="descuento" label="descuento" col_class="col-md-1 mb-3"/>
        <text id="total" label="total" col_class="col-md-1 mb-3" ignore="true"/>
        <button onclick="saltos.invoices.remove_item(this)" icon="trash" col_class="col-auto mb-3 mt-auto" tooltip="Quitar este concepto"/>
    </form_detail>
    <form_footer>
        <div col_class="col mb-3"/>
        <text id="total" label="total" col_class="col-md-1 mb-3" ignore="true"/>
        <button onclick="saltos.invoices.add_item()" icon="plus-lg" col_class="col-auto mb-3 mt-auto" tooltip="Añadir mas conceptos"/>
    </form_footer>
    <data_header eval="true">execute_query("SELECT * FROM app_invoices WHERE id=".intval(get_data("rest/3"))." AND ".check_sql(get_data("rest/1"), get_data("rest/2")))</data_header>
    <data_detail eval="true">execute_query_array("SELECT *, ROUND(unidades * precio * (1 - (descuento / 100)),2) total FROM app_invoices_concepts WHERE id_factura=".intval(get_data("rest/3"))." AND ".check_sql(get_data("rest/1"), get_data("rest/2"))." ORDER BY id ASC")</data_detail>
    <data_footer eval="true">execute_query("SELECT id, ROUND(SUM(unidades * precio * (1 - (descuento / 100))),2) total FROM app_invoices_concepts WHERE id_factura=".intval(get_data("rest/3"))." AND ".check_sql(get_data("rest/1"), get_data("rest/2")))</data_footer>

    <create>
        <check eval="true">check_app_perm_id_json(get_data("rest/1"), get_data("rest/2"))</check>
        <gettext eval="true">T([])</gettext>
        <title>New invoice</title>
        <screen eval="true">xmlfile2array("apps/invoices/xml/app.xml")["screen"]</screen>
        <navbar eval="true">xmlfile2array("apps/dashboard/xml/navbar.xml")["navbar"]</navbar>
        <layout append="two,one">
            <row auto="true" col_class="col-md-6 mb-3" row_class="row header" eval="true">xmlfile2array("apps/invoices/xml/app.xml")["form_header"]</row>
            <row auto="true" col_class="col-md-6 mb-3" row_class="row detail" template_id="detail" eval="true">xmlfile2array("apps/invoices/xml/app.xml")["form_detail"]</row>
            <row auto="true" col_class="col-md-6 mb-3" row_class="row footer" eval="true">xmlfile2array("apps/invoices/xml/app.xml")["form_footer"]</row>
            <row auto="true" row_class="row g-1" col_class="col-auto">
                <div col_class="col"/>
                <button onclick="saltos.driver.insert()" label="Crear" tooltip="Para crear la nueva factura" icon="check-lg"/>
                <button onclick="saltos.driver.close()" label="Cancelar" tooltip="Para cancelar la creación de la nueva factura" icon="x-lg"/>
            </row>
        </layout>
        <javascript>
            <file eval="true">file_with_hash("apps/invoices/js/app.js")</file>
            <inline>saltos.invoices.init('create')</inline>
            <inline>saltos.driver.init("create")</inline>
        </javascript>
    </create>

    <view>
        <check eval="true">check_app_perm_id_json(get_data("rest/1"), get_data("rest/2"), get_data("rest/3"))</check>
        <gettext eval="true">T([])</gettext>
        <title>Detail of the invoice</title>
        <screen eval="true">xmlfile2array("apps/invoices/xml/app.xml")["screen"]</screen>
        <navbar eval="true">xmlfile2array("apps/dashboard/xml/navbar.xml")["navbar"]</navbar>
        <layout append="two,one">
            <row auto="true" col_class="col-md-6 mb-3" row_class="row header" eval="true">xmlfile2array("apps/invoices/xml/app.xml")["form_header"]</row>
            <row auto="true" col_class="col-md-6 mb-3" row_class="row detail" template_id="detail" eval="true">xmlfile2array("apps/invoices/xml/app.xml")["form_detail"]</row>
            <row auto="true" col_class="col-md-6 mb-3" row_class="row footer" eval="true">xmlfile2array("apps/invoices/xml/app.xml")["form_footer"]</row>
            <row auto="true" row_class="row g-1" col_class="col-auto">
                <div col_class="col"/>
                <button label="Editar" tooltip="Para editar la factura" icon="pencil">
                    <onclick eval="true">"saltos.driver.open('app/invoices/edit/".intval(get_data("rest/3"))."')"</onclick>
                </button>
                <button onclick="saltos.driver.delete()" color="danger" label="Borrar" tooltip="Para borrar la factura" icon="trash"/>
                <button onclick="saltos.driver.close()" label="Cerrar" tooltip="Para cerrar el detalle de la factura" icon="x-lg"/>
            </row>
        </layout>
        <data eval="true">xmlfile2array("apps/invoices/xml/app.xml")["data_header"]</data>
        <data template_id="detail" eval="true">xmlfile2array("apps/invoices/xml/app.xml")["data_detail"]</data>
        <data eval="true">xmlfile2array("apps/invoices/xml/app.xml")["data_footer"]</data>
        <javascript>
            <file eval="true">file_with_hash("apps/invoices/js/app.js")</file>
            <inline>saltos.invoices.init('view')</inline>
            <inline>saltos.driver.init("view")</inline>
        </javascript>
    </view>

    <edit>
        <check eval="true">check_app_perm_id_json(get_data("rest/1"), get_data("rest/2"), get_data("rest/3"))</check>
        <gettext eval="true">T([])</gettext>
        <title>Modify this invoice</title>
        <screen eval="true">xmlfile2array("apps/invoices/xml/app.xml")["screen"]</screen>
        <navbar eval="true">xmlfile2array("apps/dashboard/xml/navbar.xml")["navbar"]</navbar>
        <layout append="two,one">
            <row auto="true" col_class="col-md-6 mb-3" row_class="row header" eval="true">xmlfile2array("apps/invoices/xml/app.xml")["form_header"]</row>
            <row auto="true" col_class="col-md-6 mb-3" row_class="row detail" template_id="detail" eval="true">xmlfile2array("apps/invoices/xml/app.xml")["form_detail"]</row>
            <row auto="true" col_class="col-md-6 mb-3" row_class="row footer" eval="true">xmlfile2array("apps/invoices/xml/app.xml")["form_footer"]</row>
            <row auto="true" row_class="row g-1" col_class="col-auto">
                <div col_class="col"/>
                <button onclick="saltos.driver.update()" label="Guardar" tooltip="Para guardar los cambios de la factura" icon="check-lg"/>
                <button onclick="saltos.driver.close()" label="Cancelar" tooltip="Para cancelar la edición de la factura" icon="x-lg"/>
            </row>
        </layout>
        <data eval="true">xmlfile2array("apps/invoices/xml/app.xml")["data_header"]</data>
        <data template_id="detail" eval="true">xmlfile2array("apps/invoices/xml/app.xml")["data_detail"]</data>
        <data eval="true">xmlfile2array("apps/invoices/xml/app.xml")["data_footer"]</data>
        <javascript>
            <file eval="true">file_with_hash("apps/invoices/js/app.js")</file>
            <inline>saltos.invoices.init('edit')</inline>
            <inline>saltos.driver.init("edit")</inline>
        </javascript>
    </edit>
</root>
