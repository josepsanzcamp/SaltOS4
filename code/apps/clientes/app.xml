<root>
    <!-- List part -->
    <list>
        <javascript>
            <inline>saltos.loading()</inline>
            <inline>saltos.clear_screen()</inline>
        </javascript>
        <layout auto="true" container_class="container mt-3" col_class="col-auto">
            <button ifeval="check_user('clientes', 'create')" onclick="saltos.open_window('#app/clientes/create')" col_class="col-auto pe-0" class="btn btn-primary" value="Nuevo cliente" tooltip="Para crear un nuevo cliente"/>
            <div col_class="col p-0"/>
            <text col_class="col-auto p-0" placeholder="Buscar" tooltip="Para buscar en todos los clientes"/>
            <button onclick="saltos.clientes.search()" col_class="col-auto p-0 ms-1" class="btn btn-primary" value="Buscar" tooltip="Para buscar en todos los clientes"/>
            <button onclick="saltos.clientes.clear_filter()" col_class="col-auto ps-0 ms-1" class="btn btn-primary" value="Limpiar" tooltip="Para limpiar el filtro"/>
            <table checkbox="true" col_class="col-md-12">
                <header eval="true">[
                    "nombre" => "Nombre",
                    "cif" => "CIF",
                    "nombre_poblacion" => "Población",
                    "nombre_codpostal" => "C.P."
                ]</header>
                <data eval="true">add_list_actions(execute_query_array("
                    SELECT id, nombre, cif, nombre_poblacion, nombre_codpostal
                    FROM app_clientes
                    WHERE 1 = 1
                    AND ".make_fulltext_query("a", "clientes", ["minsize" => 1, "default" => "1=1"])."
                    AND ".check_sql("clientes", "list")."
                    ORDER BY id DESC
                    LIMIT 0,15
                "),[
                    ["app" => "clientes", "action" => "view", "class" => "bi-search border-0", "tooltip" => "Ver detalle cliente"],
                    ["app" => "clientes", "action" => "edit", "class" => "bi-pencil-fill border-0", "tooltip" => "Editar cliente"],
                    ["app" => "clientes", "action" => "delete", "class" => "bi-trash-fill border-0", "tooltip" => "Borrar cliente"],
                ])</data>
                <footer eval="true">"Total: " . execute_query("
                    SELECT COUNT(*) total
                    FROM app_clientes
                    WHERE 1 = 1
                    AND ".make_fulltext_query("a", "clientes", ["minsize" => 1, "default" => "1=1"])."
                    AND ".check_sql("clientes", "list")."
                ")</footer>
                <divider eval="true">[false, true, true]</divider>
            </table>>
            <div col_class="col mb-3"/>
            <button onclick="saltos.clientes.read_more()" col_class="col-auto mb-3 ps-0 ms-1" class="btn btn-primary" value="Ver más correos" tooltip="Para cargar mas correos en el listado"/>
        </layout>
        <javascript>
            <file eval="true">file_with_hash("apps/clientes/app.js")</file>
        </javascript>
    </list>
    <!-- Form part -->
    <layout auto="true" container_class="container mt-3" col_class="col-md-6 mb-3">
        <text id="codigo" label="Codigo"/>
        <switch id="activo" label="Activo"/>
        <text id="nombre" label="Nombre" required="true"/>
        <text id="nombre1" label="Nombre1"/>
        <text id="nombre2" label="Nombre2"/>
        <text id="cif" label="CIF" required="true"/>
        <textarea id="comentarios" label="Comentarios"/>
        <text id="corriente" label="C. corriente"/>
        <text id="contable" label="C. contable"/>
        <text id="diapago" label="Dia de pago"/>
        <text id="direccion" label="Dirección"/>
        <text id="nombre_pais" label="Pais"/>
        <text id="nombre_provincia" label="Provincia"/>
        <text id="nombre_poblacion" label="Poblacion" required="true"/>
        <text id="nombre_codpostal" label="Cod. postal" required="true"/>
        <text id="email" label="Email"/>
        <text id="web" label="Web"/>
        <text id="tel_fijo" label="Tel fijo"/>
        <text id="tel_movil" label="Tel movil"/>
        <text id="fax" label="Fax"/>
    </layout>
    <data global="_DATA" eval="true">execute_query("SELECT * FROM app_clientes WHERE id=".intval($_DATA["rest"][3]))</data>
    <create>
        <javascript>
            <inline>saltos.loading()</inline>
            <inline>saltos.clear_screen()</inline>
        </javascript>
        <layout eval="true">xmlfile2array("apps/clientes/app.xml")["layout"]</layout>
        <layout auto="true" container_class="container" col_class="col-auto">
            <div col_class="col mb-3"/>
            <button onclick="saltos.clientes.insert()" col_class="col-auto mb-3 p-0 ms-1" class="btn btn-primary" value="Crear" tooltip="Para crear el nuevo cliente"/>
            <button onclick="saltos.clientes.cancel()" col_class="col-auto mb-3 ps-0 ms-1" class="btn btn-primary" value="Cancelar" tooltip="Para cancelar la creación del nuevo cliente"/>
        </layout>
        <javascript>
            <file eval="true">file_with_hash("apps/clientes/app.js")</file>
        </javascript>
    </create>
    <view>
        <javascript>
            <inline>saltos.loading()</inline>
            <inline>saltos.clear_screen()</inline>
        </javascript>
        <layout eval="true">xmlfile2array("apps/clientes/app.xml")["layout"]</layout>
        <data eval="true">xmlfile2array("apps/clientes/app.xml")["data"]</data>
        <layout auto="true" container_class="container" col_class="col-auto">
            <div col_class="col mb-3"/>
            <button col_class="col-auto mb-3 p-0 ms-1" class="btn btn-primary" value="Editar" tooltip="Para editar el cliente">
                <onclick global="_DATA" eval="true">"saltos.open_window('#app/clientes/edit/".intval($_DATA["rest"][3])."')"</onclick>
            </button>
            <button onclick="saltos.clientes.cancel()" col_class="col-auto mb-3 ps-0 ms-1" class="btn btn-primary" value="Volver" tooltip="Para volver atrás"/>
        </layout>
        <javascript>
            <file eval="true">file_with_hash("apps/clientes/app.js")</file>
        </javascript>
    </view>
    <edit>
        <javascript>
            <inline>saltos.loading()</inline>
            <inline>saltos.clear_screen()</inline>
        </javascript>
        <layout eval="true">xmlfile2array("apps/clientes/app.xml")["layout"]</layout>
        <data eval="true">xmlfile2array("apps/clientes/app.xml")["data"]</data>
        <layout auto="true" container_class="container" col_class="col-auto">
            <div col_class="col mb-3"/>
            <button onclick="saltos.clientes.update()" col_class="col-auto mb-3 p-0 ms-1" class="btn btn-primary" value="Guardar" tooltip="Para guardar los cambios del cliente"/>
            <button onclick="saltos.clientes.cancel()" col_class="col-auto mb-3 ps-0 ms-1" class="btn btn-primary" value="Cancelar" tooltip="Para cancelar la edición del cliente"/>
        </layout>
        <javascript>
            <file eval="true">file_with_hash("apps/clientes/app.js")</file>
        </javascript>
    </edit>
    <delete>
        <javascript>
            <inline>saltos.loading()</inline>
            <inline>saltos.clear_screen()</inline>
        </javascript>
        <layout eval="true">xmlfile2array("apps/clientes/app.xml")["layout"]</layout>
        <data eval="true">xmlfile2array("apps/clientes/app.xml")["data"]</data>
        <layout auto="true" container_class="container" col_class="col-auto">
            <div col_class="col mb-3"/>
            <button onclick="saltos.clientes.delete()" col_class="col-auto mb-3 p-0 ms-1" class="btn btn-primary" value="Borrar" tooltip="Para borrar el cliente"/>
            <button onclick="saltos.clientes.cancel()" col_class="col-auto mb-3 ps-0 ms-1" class="btn btn-primary" value="Cancelar" tooltip="Para cancelar la edición del cliente"/>
        </layout>
        <javascript>
            <file eval="true">file_with_hash("apps/clientes/app.js")</file>
        </javascript>
    </delete>
    <widget id="1">
        <header eval="true">["Nombre", "CIF", "Población", "C.P."]</header>
        <data eval="true">execute_query_array("SELECT nombre, cif, nombre_poblacion, nombre_codpostal FROM app_clientes ORDER BY id DESC LIMIT 0,5")</data>
        <footer eval="true">"Total: 5 registros"</footer>
        <divider eval="true">[false, true, true]</divider>
    </widget>
    <widget id="2">
        <header eval="true">["Nombre", "CIF", "Población", "C.P."]</header>
        <data eval="true">execute_query_array("SELECT nombre, cif, nombre_poblacion, nombre_codpostal FROM app_clientes ORDER BY id ASC LIMIT 0,5")</data>
        <footer eval="true">"Total: 5 registros"</footer>
        <divider eval="true">[false, true, true]</divider>
    </widget>
    <widget id="3">
        <data eval="true">[
            "labels" => ['Red', 'Blue', 'Yellow', 'Green', 'Purple', 'Orange'],
            "datasets" => [[
                    "label" => 'First round',
                    "data" => [8, 5, 3, 5, 2, 3],
                ],[
                    "label" => 'Second round',
                    "data" => [7, 6, 4, 6, 9, 6],
                ],[
                    "label" => 'Third round',
                    "data" => [6, 7, 6, 7, 5, 4],
                ]]
        ]</data>
    </widget>
    <widget id="5">
        <data eval="true">[
            "labels" => ['Red', 'Blue', 'Yellow', 'Green'],
            "datasets" => [[
                    "label" => 'First round',
                    "data" => [8, 5, 3, 5],
                ]]
        ]</data>
    </widget>
</root>
