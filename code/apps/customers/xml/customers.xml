<root>
    <main>
        <check eval="true" logout="true">current_user()</check>
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"))</check>
        <screen>type5</screen>
        <gettext eval="true">T()</gettext>
        <navbar eval="true">xmlfile2array("apps/common/xml/navbar.xml")["navbar"]</navbar>
    </main>

    <!-- List part -->
    <list default="true">
        <check eval="true" logout="true">current_user()</check>
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"))</check>
        <cache>app/customers/list/cache</cache>
    </list>

    <list id="cache">
        <check eval="true" logout="true">current_user()</check>
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"))</check>
        <cache>app/customers/main</cache>
        <title>Customer's list</title>
        <layout append="one">
            <row auto="true" row_class="row g-1" col_class="col-auto">
                <button onclick="saltos.common.filter()" tooltip="Show and hide the search form" icon="funnel" col_class="col-auto"/>
                <button onclick="saltos.common.create()" label="Nuevo cliente" tooltip="Para crear un nuevo cliente" icon="plus-lg" color="success" ifeval="check_user(get_data('rest/1'), 'create')"/>
                <div col_class="col"/>
                <hidden id="page" value="0"/>
                <text placeholder="Search" tooltip="To search in all contents" id="search" accesskey="ctrl+shift+f" onenter="document.getElementById('search_extra').value=this.value;saltos.driver.search()" autofocus="true" onchange="document.getElementById('search_extra').value=this.value"/>
                <button onclick="saltos.driver.search()" label="Search" tooltip="To search in all contents" icon="search"/>
                <button onclick="saltos.driver.reset()" label="Reset" tooltip="To reset the search filter" icon="x-lg"/>
            </row>
            <div eval="true">xmlfile2array("apps/common/xml/filter.xml")["div"]</div>
            <row auto="true" col_class="col-md-12 my-3">
                <table id="list" nodata="Loading...">
                    <header>
                        <nombre label="Nombre"/>
                        <cif label="CIF"/>
                        <nombre_poblacion label="Población"/>
                        <nombre_codpostal label="C.P."/>
                    </header>
                    <actions>
                        <view label="View" icon="search" tooltip="Ver detalle cliente" onclick="saltos.driver.open"/>
                        <edit label="Edit" icon="pencil" tooltip="Editar cliente" onclick="saltos.driver.open"/>
                        <delete label="Delete" icon="trash" color="danger" tooltip="Borrar cliente" onclick="saltos.driver.delete"/>
                    </actions>
                </table>
            </row>
            <row auto="true" row_class="row g-1" col_class="col-auto">
                <div col_class="col"/>
                <button id="more" onclick="saltos.driver.more()" label="Ver más clientes" tooltip="Para cargar mas clientes en el listado" icon="plus-lg"/>
            </row>
        </layout>
        <javascript>
            <inline>saltos.driver.init("list")</inline>
        </javascript>
    </list>

    <list id="data">
        <check eval="true" logout="true">current_user()</check>
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"))</check>
        <temp eval="true">[
            set_config("app/".get_data("rest/1")."/filter/last", json_encode(get_data("json"), JSON_FORCE_OBJECT), current_user()),
            set_data("json/search", strval(get_data("json/search"))),
            set_data("json/page", intval(get_data("json/page"))),
            set_data("json/order", "id DESC"),
            set_data("json/limit", 25),
            set_data("json/offset", intval(get_data("json/page") * get_data("json/limit"))),
        ]</temp>
        <data require="php/lib/log.php" eval="true">merge_data_actions(
            make_log_bypass(get_data("rest/1"), get_data("rest/2"), execute_query_array("
                SELECT id, nombre, cif, nombre_poblacion, nombre_codpostal
                FROM app_customers
                WHERE 1 = 1
                AND ".make_fulltext_query(get_data("json/search"), "customers")."
                AND ".check_sql("customers", "list")."
                ORDER BY ".get_data("json/order")."
                LIMIT ".get_data("json/offset").",".get_data("json/limit"))),
            xpath_search_first_value("list[id=data]/actions", xmlfile2array("apps/customers/xml/customers.xml"))
        )</data>
        <actions ifeval="false">
            <view app="customers" action="view"/>
            <edit app="customers" action="edit"/>
            <delete app="customers" action="delete"/>
        </actions>
        <temp ifeval="!get_data('json/page')" eval="true">set_data("json/total", execute_query("
            SELECT COUNT(*) total
            FROM app_customers
            WHERE 1 = 1
            AND ".make_fulltext_query(get_data("json/search"), "customers")."
            AND ".check_sql("customers", "list")))</temp>
        <nodata ifeval="!get_data('json/page') &amp;&amp; !get_data('json/total')">Data not found</nodata>
        <footer ifeval="!get_data('json/page')" eval="true">get_data('json/total') ? "Total: " . get_data('json/total') : ''</footer>
    </list>

    <list id="filter" eval="true">xmlfile2array("apps/common/xml/filter.xml")["list"]</list>

    <!-- Form part -->
    <form>
        <text id="codigo" label="Codigo"/>
        <switch id="activo" label="Activo"/>
        <text id="nombre" label="Nombre" required="true" autofocus="true"/>
        <text id="nombre1" label="Nombre1"/>
        <text id="nombre2" label="Nombre2"/>
        <text id="cif" label="CIF" required="true"/>
        <textarea id="comentarios" label="Comentarios"/>
        <text id="corriente" label="C. corriente"/>
        <text id="contable" label="C. contable"/>
        <text id="diapago" label="Dia de pago"/>
        <text id="direccion" label="Dirección"/>
        <text id="nombre_pais" label="Pais"/>
        <text id="nombre_provincia" label="Provincia"/>
        <text id="nombre_poblacion" label="Poblacion" required="true"/>
        <text id="nombre_codpostal" label="Cod. postal" required="true"/>
        <text id="email" label="Email"/>
        <text id="web" label="Web"/>
        <text id="tel_fijo" label="Tel fijo"/>
        <text id="tel_movil" label="Tel movil"/>
        <text id="fax" label="Fax"/>
    </form>

    <data require="php/lib/log.php" eval="true">make_log_bypass(get_data("rest/1"), get_data("rest/2"), execute_query("
        SELECT * FROM ".app2table(get_data("rest/1"))." WHERE id = ? AND ".check_sql(get_data("rest/1"), get_data("rest/2")),
        [intval(get_data("rest/3"))]))</data>

    <create>
        <check eval="true" logout="true">current_user()</check>
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"))</check>
        <cache>app/customers/create/cache</cache>
    </create>

    <create id="cache">
        <check eval="true" logout="true">current_user()</check>
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"))</check>
        <cache>app/customers/main</cache>
        <title>New customer</title>
        <layout append="two,one">
            <row auto="true" col_class="col-md-6 mb-3" eval="true">xmlfile2array("apps/customers/xml/customers.xml")["form"]</row>
            <row auto="true" col_class="col-md-6 mb-3" eval="true">xmlfile2array("apps/common/xml/files.xml")["form"]</row>
            <row auto="true" col_class="col-md-6 mb-3" eval="true">xmlfile2array("apps/common/xml/notes.xml")["form"]</row>
            <row auto="true" row_class="row g-1" col_class="col-auto">
                <div col_class="col"/>
                <button onclick="saltos.driver.insert()" label="Crear" tooltip="Para crear el nuevo cliente" icon="check-lg" color="success"/>
                <button onclick="saltos.driver.cancel()" label="Cancelar" tooltip="Para cancelar la creación del nuevo cliente" icon="x-lg" autoclose="true" color="danger"/>
            </row>
        </layout>
        <javascript>
            <inline>saltos.driver.init("create")</inline>
        </javascript>
    </create>

    <create id="insert">
        <check eval="true" logout="true">current_user()</check>
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"))</check>
        <output require="php/lib/actions.php" eval="true">insert(get_data("rest/1"), get_data("json"))</output>
    </create>

    <view>
        <check eval="true" logout="true">current_user()</check>
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"), get_data("rest/3"))</check>
        <cache>app/customers/view/cache</cache>
        <data eval="true">xmlfile2array("apps/customers/xml/customers.xml")["data"]</data>
        <data><allfiles eval="true">xmlfile2array("apps/common/xml/files.xml")["data"]</allfiles></data>
        <data><allnotes eval="true">xmlfile2array("apps/common/xml/notes.xml")["data"]</allnotes></data>
        <javascript>
            <inline>saltos.driver.init("view")</inline>
            <inline>saltos.common.allfiles()</inline>
            <inline>saltos.common.allnotes()</inline>
        </javascript>
    </view>

    <view id="cache">
        <check eval="true" logout="true">current_user()</check>
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"))</check>
        <cache>app/customers/main</cache>
        <title>Detail of the customer</title>
        <layout append="two,one">
            <row auto="true" col_class="col-md-6 mb-3" eval="true">xmlfile2array("apps/customers/xml/customers.xml")["form"]</row>
            <row auto="true" col_class="col-md-6 mb-3" eval="true">xmlfile2array("apps/common/xml/files.xml")["form"]</row>
            <row auto="true" col_class="col-md-6 mb-3" eval="true">xmlfile2array("apps/common/xml/notes.xml")["form"]</row>
            <row auto="true" row_class="row g-1" col_class="col-auto">
                <dropdown label="Info" icon="file-text" tooltip="Information of this register" ifeval="check_user(get_data('rest/1'), 'info')">
                    <menu>
                        <button onclick="saltos.common.version()" label="History" tooltip="To see the history of the changes" icon="file-text" ifeval="app2version(get_data('rest/1'))"/>
                        <button onclick="saltos.common.log()" label="Log" tooltip="To see the history of the changes" icon="file-text" ifeval="app2log(get_data('rest/1'))"/>
                    </menu>
                </dropdown>
                <div col_class="col"/>
                <button onclick="saltos.common.edit()" label="Editar" tooltip="Para editar el cliente" icon="pencil"/>
                <button onclick="saltos.driver.delete()" color="danger" label="Borrar" tooltip="Para borrar el cliente" icon="trash"/>
                <button onclick="saltos.driver.close()" label="Cerrar" tooltip="Para cerrar el detalle del cliente" icon="x-lg" autoclose="true"/>
                <button onclick="saltos.driver.close(true)" col_class="d-none" accesskey="escape"/>
            </row>
        </layout>
    </view>

    <view id="viewpdf" eval="true">xpath_search_first("view[id=viewpdf]", xmlfile2array("apps/common/xml/files.xml"))</view>
    <view id="download" eval="true">xpath_search_first("view[id=download]", xmlfile2array("apps/common/xml/files.xml"))</view>
    <view id="version" eval="true">xpath_search_first("view[id=version]", xmlfile2array("apps/common/xml/version.xml"))</view>
    <view id="log" eval="true">xpath_search_first("view[id=log]", xmlfile2array("apps/common/xml/log.xml"))</view>

    <edit>
        <check eval="true" logout="true">current_user()</check>
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"), get_data("rest/3"))</check>
        <cache>app/customers/edit/cache</cache>
        <data eval="true">xmlfile2array("apps/customers/xml/customers.xml")["data"]</data>
        <data><allfiles eval="true">xmlfile2array("apps/common/xml/files.xml")["data"]</allfiles></data>
        <data><allnotes eval="true">xmlfile2array("apps/common/xml/notes.xml")["data"]</allnotes></data>
        <javascript>
            <inline>saltos.driver.init("edit")</inline>
            <inline>saltos.common.allfiles()</inline>
            <inline>saltos.common.allnotes()</inline>
        </javascript>
    </edit>

    <edit id="cache">
        <check eval="true" logout="true">current_user()</check>
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"))</check>
        <cache>app/customers/main</cache>
        <title>Modify this customer</title>
        <layout append="two,one">
            <row auto="true" col_class="col-md-6 mb-3" eval="true">xmlfile2array("apps/customers/xml/customers.xml")["form"]</row>
            <row auto="true" col_class="col-md-6 mb-3" eval="true">xmlfile2array("apps/common/xml/files.xml")["form"]</row>
            <row auto="true" col_class="col-md-6 mb-3" eval="true">xmlfile2array("apps/common/xml/notes.xml")["form"]</row>
            <row auto="true" row_class="row g-1" col_class="col-auto">
                <div col_class="col"/>
                <button onclick="saltos.driver.update()" label="Guardar" tooltip="Para guardar los cambios del cliente" icon="check-lg" color="success"/>
                <button onclick="saltos.driver.cancel()" label="Cancelar" tooltip="Para cancelar la edición del cliente" icon="x-lg" autoclose="true" color="danger"/>
            </row>
        </layout>
    </edit>

    <edit id="update">
        <check eval="true" logout="true">current_user()</check>
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"), get_data("rest/4"))</check>
        <output require="php/lib/actions.php" eval="true">update(get_data("rest/1"), intval(get_data("rest/4")), get_data("json"))</output>
    </edit>

    <delete>
        <check eval="true" logout="true">current_user()</check>
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"), get_data("rest/3"))</check>
        <output require="php/lib/actions.php" eval="true">delete(get_data("rest/1"), intval(get_data("rest/3")))</output>
    </delete>

    <!-- Widget part -->
    <widget id="table1" type="table" nodata="Data not found" checkbox="true">
        <check eval="true" logout="true">current_user()</check>
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"))</check>
        <header>
            <nombre label="Nombre"/>
            <cif label="CIF"/>
            <nombre_poblacion label="Población"/>
            <nombre_codpostal label="C.P."/>
        </header>
        <temp eval="true">[
            set_data("json/page", intval(get_data("json/page"))),
            set_data("json/order", "id DESC"),
            set_data("json/limit", 5),
            set_data("json/offset", intval(get_data("json/page") * get_data("json/limit"))),
        ]</temp>
        <data require="php/lib/log.php" eval="true">merge_data_actions(
            make_log_bypass(get_data("rest/1"), get_data("rest/2"), execute_query_array("
                SELECT id, nombre, cif, nombre_poblacion, nombre_codpostal
                FROM app_customers
                WHERE 1 = 1
                AND ".check_sql("customers", "list")."
                ORDER BY ".get_data("json/order")."
                LIMIT ".get_data("json/offset").",".get_data("json/limit"))),
            xpath_search_first_value("widget[id=table1]/actions", xmlfile2array("apps/customers/xml/customers.xml"))
        )</data>
        <actions>
            <action app="customers" action="view" icon="search" tooltip="Ver detalle cliente" onclick="saltos.driver.open"/>
        </actions>
        <footer ifeval="!get_data('json/page')" eval="true">"Total: " . execute_query("
            SELECT COUNT(*) total
            FROM app_customers
            WHERE 1 = 1
            AND ".check_sql("customers", "list")."
        ")</footer>
    </widget>

    <widget id="table2" type="table" nodata="Data not found" checkbox="true">
        <check eval="true" logout="true">current_user()</check>
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"))</check>
        <header>
            <nombre label="Nombre"/>
            <cif label="CIF"/>
            <nombre_poblacion label="Población"/>
            <nombre_codpostal label="C.P."/>
        </header>
        <temp eval="true">[
            set_data("json/page", intval(get_data("json/page"))),
            set_data("json/order", "id ASC"),
            set_data("json/limit", 5),
            set_data("json/offset", intval(get_data("json/page") * get_data("json/limit"))),
        ]</temp>
        <data require="php/lib/log.php" eval="true">merge_data_actions(
            make_log_bypass(get_data("rest/1"), get_data("rest/2"), execute_query_array("
                SELECT id, nombre, cif, nombre_poblacion, nombre_codpostal
                FROM app_customers
                WHERE 1 = 1
                AND ".check_sql("customers", "list")."
                ORDER BY ".get_data("json/order")."
                LIMIT ".get_data("json/offset").",".get_data("json/limit"))),
            xpath_search_first_value("widget[id=table2]/actions", xmlfile2array("apps/customers/xml/customers.xml"))
        )</data>
        <actions>
            <action app="customers" action="view" icon="search" tooltip="Ver detalle cliente" onclick="saltos.driver.open"/>
        </actions>
        <footer>
            <nombre value="A"/>
            <cif value="B"/>
            <nombre_poblacion value="C"/>
            <nombre_codpostal value="D"/>
        </footer>
    </widget>

    <widget id="plot1">
        <check eval="true" logout="true">current_user()</check>
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"))</check>
        <data eval="true">[
            "labels" => ['Red', 'Blue', 'Yellow', 'Green', 'Purple', 'Orange'],
            "datasets" => [[
                    "label" => 'First round',
                    "data" => [8, 5, 3, 5, 2, 3],
                ],[
                    "label" => 'Second round',
                    "data" => [7, 6, 4, 6, 9, 6],
                ],[
                    "label" => 'Third round',
                    "data" => [6, 7, 6, 7, 5, 4],
                ]]
        ]</data>
    </widget>

    <widget id="plot2">
        <check eval="true" logout="true">current_user()</check>
        <check eval="true">check_app_perm_id(get_data("rest/1"), get_data("rest/2"))</check>
        <data eval="true">[
            "labels" => ['Red', 'Blue', 'Yellow', 'Green'],
            "datasets" => [[
                    "label" => 'First round',
                    "data" => [8, 5, 3, 5],
                ]]
        ]</data>
    </widget>

    <!-- Actions part -->
    <action id="setup">
        <check eval="true">true</check>
        <output require="apps/customers/sample/setup.php"/>
    </action>
</root>
