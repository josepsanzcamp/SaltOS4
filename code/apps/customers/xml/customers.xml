<root>
    <screen>type2</screen>

    <!-- List part -->
    <list default="true">
        <check eval="true">check_app_perm_id_json(get_data("rest/1"), get_data("rest/2"))</check>
        <gettext eval="true">T([])</gettext>
        <title>Customer's list</title>
        <screen eval="true">xmlfile2array("apps/customers/xml/customers.xml")["screen"]</screen>
        <navbar eval="true">xmlfile2array("apps/dashboard/xml/navbar.xml")["navbar"]</navbar>
        <layout append="one">
            <row auto="true" row_class="row g-1" col_class="col-auto">
                <button ifeval="check_user('customers', 'create')" onclick="saltos.driver.open('app/customers/create')" label="Nuevo cliente" tooltip="Para crear un nuevo cliente" icon="plus-lg"/>
                <div col_class="col"/>
                <hidden id="page" value="0"/>
                <text placeholder="Search" tooltip="To search in all contents" id="search" accesskey="ctrl+f" onenter="saltos.driver.search()" autofocus="true"/>
                <button onclick="saltos.driver.search()" label="Search" tooltip="To search in all contents" icon="search"/>
                <button onclick="saltos.driver.reset()" label="Reset" tooltip="To reset the search filter" icon="x-lg"/>
            </row>
            <row auto="true" col_class="col-md-12 my-3">
                <table id="table" source="app/customers/list/table"/>
            </row>
            <row auto="true" row_class="row g-1" col_class="col-auto">
                <div col_class="col"/>
                <button id="more" onclick="saltos.driver.more()" label="Ver más clientes" tooltip="Para cargar mas clientes en el listado" icon="plus-lg"/>
            </row>
        </layout>
        <javascript>
            <inline>saltos.driver.init("list")</inline>
        </javascript>
    </list>

    <list id="table" type="table" limit="25" order="id DESC">
        <header>
            <nombre label="Nombre"/>
            <cif label="CIF"/>
            <nombre_poblacion label="Población"/>
            <nombre_codpostal label="C.P."/>
        </header>
        <data eval="true">execute_query_array("
            SELECT id, nombre, cif, nombre_poblacion, nombre_codpostal
            FROM app_customers
            WHERE 1 = 1
            AND ".make_fulltext_query(get_data("json/search"), "customers", ["minsize" => 1, "default" => "1=1"])."
            AND ".check_sql("customers", "list")."
            ORDER BY ".get_data("json/order")."
            LIMIT ".get_data("json/offset").",".get_data("json/limit")."
        ")</data>
        <actions>
            <action app="customers" action="view" label="View" icon="search" tooltip="Ver detalle cliente" onclick="saltos.driver.open"/>
            <action app="customers" action="edit" label="Edit" icon="pencil" tooltip="Editar cliente" onclick="saltos.driver.open"/>
            <action app="customers" action="delete" label="Delete" icon="trash" tooltip="Borrar cliente" onclick="saltos.driver.delete"/>
        </actions>
        <footer eval="true">"Total: " . execute_query("
            SELECT COUNT(*) total
            FROM app_customers
            WHERE 1 = 1
            AND ".make_fulltext_query(get_data("json/search"), "customers", ["minsize" => 1, "default" => "1=1"])."
            AND ".check_sql("customers", "list")."
        ")</footer>
    </list>

    <!-- Form part -->
    <form>
        <text id="codigo" label="Codigo"/>
        <switch id="activo" label="Activo"/>
        <text id="nombre" label="Nombre" required="true" autofocus="true"/>
        <text id="nombre1" label="Nombre1"/>
        <text id="nombre2" label="Nombre2"/>
        <text id="cif" label="CIF" required="true"/>
        <textarea id="comentarios" label="Comentarios"/>
        <text id="corriente" label="C. corriente"/>
        <text id="contable" label="C. contable"/>
        <text id="diapago" label="Dia de pago"/>
        <text id="direccion" label="Dirección"/>
        <text id="nombre_pais" label="Pais"/>
        <text id="nombre_provincia" label="Provincia"/>
        <text id="nombre_poblacion" label="Poblacion" required="true"/>
        <text id="nombre_codpostal" label="Cod. postal" required="true"/>
        <text id="email" label="Email"/>
        <text id="web" label="Web"/>
        <text id="tel_fijo" label="Tel fijo"/>
        <text id="tel_movil" label="Tel movil"/>
        <text id="fax" label="Fax"/>
    </form>
    <data eval="true">execute_query("SELECT * FROM app_customers WHERE id=".intval(get_data("rest/3"))." AND ".check_sql(get_data("rest/1"), get_data("rest/2")))</data>

    <create>
        <check eval="true">check_app_perm_id_json(get_data("rest/1"), get_data("rest/2"))</check>
        <gettext eval="true">T([])</gettext>
        <title>New customer</title>
        <screen eval="true">xmlfile2array("apps/customers/xml/customers.xml")["screen"]</screen>
        <navbar eval="true">xmlfile2array("apps/dashboard/xml/navbar.xml")["navbar"]</navbar>
        <layout append="two,one">
            <row auto="true" col_class="col-md-6 mb-3" eval="true">xmlfile2array("apps/customers/xml/customers.xml")["form"]</row>
            <row auto="true" row_class="row g-1" col_class="col-auto">
                <div col_class="col"/>
                <button onclick="saltos.driver.insert()" label="Crear" tooltip="Para crear el nuevo cliente" icon="check-lg"/>
                <button onclick="saltos.driver.close()" label="Cancelar" tooltip="Para cancelar la creación del nuevo cliente" icon="x-lg"/>
            </row>
        </layout>
        <javascript>
            <inline>saltos.driver.init("create")</inline>
        </javascript>
    </create>

    <create id="insert">
        <check eval="true">check_app_perm_id_json(get_data("rest/1"), get_data("rest/2"))</check>
        <array require="php/lib/actions.php" eval="true">insert(get_data("rest/1"), get_data("json/data"))</array>
    </create>

    <view>
        <check eval="true">check_app_perm_id_json(get_data("rest/1"), get_data("rest/2"), get_data("rest/3"))</check>
        <gettext eval="true">T([])</gettext>
        <title>Detail of the customer</title>
        <screen eval="true">xmlfile2array("apps/customers/xml/customers.xml")["screen"]</screen>
        <navbar eval="true">xmlfile2array("apps/dashboard/xml/navbar.xml")["navbar"]</navbar>
        <layout append="two,one">
            <row auto="true" col_class="col-md-6 mb-3" eval="true">xmlfile2array("apps/customers/xml/customers.xml")["form"]</row>
            <row auto="true" row_class="row g-1" col_class="col-auto">
                <div col_class="col"/>
                <button label="Editar" tooltip="Para editar el cliente" icon="pencil">
                    <onclick eval="true">"saltos.driver.open('app/customers/edit/".intval(get_data("rest/3"))."')"</onclick>
                </button>
                <button onclick="saltos.driver.delete()" color="danger" label="Borrar" tooltip="Para borrar el cliente" icon="trash"/>
                <button onclick="saltos.driver.close()" label="Cerrar" tooltip="Para cerrar el detalle del cliente" icon="x-lg"/>
            </row>
        </layout>
        <data eval="true">xmlfile2array("apps/customers/xml/customers.xml")["data"]</data>
        <javascript>
            <inline>saltos.driver.init("view")</inline>
        </javascript>
    </view>

    <edit>
        <check eval="true">check_app_perm_id_json(get_data("rest/1"), get_data("rest/2"), get_data("rest/3"))</check>
        <gettext eval="true">T([])</gettext>
        <title>Modify this customer</title>
        <screen eval="true">xmlfile2array("apps/customers/xml/customers.xml")["screen"]</screen>
        <navbar eval="true">xmlfile2array("apps/dashboard/xml/navbar.xml")["navbar"]</navbar>
        <layout append="two,one">
            <row auto="true" col_class="col-md-6 mb-3" eval="true">xmlfile2array("apps/customers/xml/customers.xml")["form"]</row>
            <row auto="true" row_class="row g-1" col_class="col-auto">
                <div col_class="col"/>
                <button onclick="saltos.driver.update()" label="Guardar" tooltip="Para guardar los cambios del cliente" icon="check-lg"/>
                <button onclick="saltos.driver.close()" label="Cancelar" tooltip="Para cancelar la edición del cliente" icon="x-lg"/>
            </row>
        </layout>
        <data eval="true">xmlfile2array("apps/customers/xml/customers.xml")["data"]</data>
        <javascript>
            <inline>saltos.driver.init("edit")</inline>
        </javascript>
    </edit>

    <edit id="update">
        <check eval="true">check_app_perm_id_json(get_data("rest/1"), get_data("rest/2"), get_data("rest/4"))</check>
        <array require="php/lib/actions.php" eval="true">update(get_data("rest/1"), intval(get_data("rest/4")), get_data("json/data"))</array>
    </edit>

    <delete>
        <check eval="true">check_app_perm_id_json(get_data("rest/1"), get_data("rest/2"), get_data("rest/3"))</check>
        <array require="php/lib/actions.php" eval="true">delete(get_data("rest/1"), intval(get_data("rest/3")))</array>
    </delete>

    <!-- Widget part -->
    <widget id="table1" type="table" order="id DESC" limit="5">
        <header>
            <nombre label="Nombre"/>
            <cif label="CIF"/>
            <nombre_poblacion label="Población"/>
            <nombre_codpostal label="C.P."/>
        </header>
        <data eval="true">execute_query_array("SELECT id, nombre, cif, nombre_poblacion, nombre_codpostal
            FROM app_customers
            WHERE 1 = 1
            AND ".check_sql("customers", "list")."
            ORDER BY ".get_data("json/order")."
            LIMIT ".get_data("json/offset").",".get_data("json/limit"))</data>
        <actions>
            <action app="customers" action="view" icon="search" tooltip="Ver detalle cliente" onclick="saltos.driver.open"/>
        </actions>
        <footer eval="true">"Total: " . execute_query("
            SELECT COUNT(*) total
            FROM app_customers
            WHERE 1 = 1
            AND ".check_sql("customers", "list")."
        ")</footer>
    </widget>

    <widget id="table2" type="table" order="id ASC" limit="5">
        <header>
            <nombre label="Nombre"/>
            <cif label="CIF"/>
            <nombre_poblacion label="Población"/>
            <nombre_codpostal label="C.P."/>
        </header>
        <data eval="true">execute_query_array("SELECT nombre, cif, nombre_poblacion, nombre_codpostal
            FROM app_customers
            WHERE 1 = 1
            AND ".check_sql("customers", "list")."
            ORDER BY ".get_data("json/order")."
            LIMIT ".get_data("json/offset").",".get_data("json/limit"))</data>
        <footer>
            <nombre value="A"/>
            <cif value="B"/>
            <nombre_poblacion value="C"/>
            <nombre_codpostal value="D"/>
        </footer>
    </widget>

    <widget id="plot1">
        <data eval="true">[
            "labels" => ['Red', 'Blue', 'Yellow', 'Green', 'Purple', 'Orange'],
            "datasets" => [[
                    "label" => 'First round',
                    "data" => [8, 5, 3, 5, 2, 3],
                ],[
                    "label" => 'Second round',
                    "data" => [7, 6, 4, 6, 9, 6],
                ],[
                    "label" => 'Third round',
                    "data" => [6, 7, 6, 7, 5, 4],
                ]]
        ]</data>
    </widget>

    <widget id="plot2">
        <data eval="true">[
            "labels" => ['Red', 'Blue', 'Yellow', 'Green'],
            "datasets" => [[
                    "label" => 'First round',
                    "data" => [8, 5, 3, 5],
                ]]
        ]</data>
    </widget>
</root>
